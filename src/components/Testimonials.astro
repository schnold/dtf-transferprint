---
interface Props {
	title?: string;
	subtitle?: string;
}

const { 
	title = "Kundenbewertungen, die uns stolz machen",
	subtitle = "Unsere Bewertungen auf Google spiegeln wider, was uns antreibt: Service, Qualität und Professionalität."
} = Astro.props;

const GOOGLE_PROFILE_URL = "https://maps.app.goo.gl/RUx3953YcBxNfUqA8";
const RATING = "4,9";
const RATING_MAX = "5";

const testimonials = [
	{
		name: "Claudius Wagner",
		text: "Wir haben anlässlich unserer Hochzeit 20 Decken mit den Initialen unserer Gäste besticken lassen. Obwohl die Anfrage relativ kurzfristig von uns kam, wurden wir sehr gut beraten und der Auftrag sehr schnell umgesetzt. Das Ergebnis war von sehr guter Qualität und schöner als erwartet. Wir waren jedenfalls rundum zufrieden und unsere Gäste waren begeistert. Jederzeit gerne wieder."
	},
	{
		name: "Hans Meyer",
		text: "Habe bei Selini einen recht komplexen Stickauftrag mit mehreren Farben im Logo platziert. War zu Anfang etwas skeptisch ob das Resultat meinen hohen Qualitätsansprüchen gerecht wird. Ich muss sagen: Das Logo sieht besser aus, als ich es erwartet hatte. Mit viel Liebe zum Detail hat mir der Inhaber die Arbeitsschritte erklärt und den Auftrag mit hoher Präzision ausgeführt. Daumen hoch und fünf Sterne für Qualität und Termintreue."
	},
	{
		name: "Lili",
		text: "Habe T-Shirts für mein Orchester (80 Stück) bestellt und sie innerhalb von einer Woche bekommen! Die Arbeit war sehr gut und ordentlich, alle waren von dem Ergebnis begeistert. Kann ich nur empfehlen!"
	},
	{
		name: "Theo Savvidis",
		text: "Hier kommt ein Meister seiner Klasse wenn es um Textilveredelung geht. Ein großes Lob an seine Fingerfertigkeit, bis jetzt dachte ich das sind Eigenschaften eines Uhrenmachers. Unsere neuen T-Shirts mit Logo sind ein Mehrwert für unser Restaurant."
	},
	{
		name: "Julian Bethke",
		text: "Wir haben unsere Tischläufer mit sensiblen handgewebten Stoff besticken lassen und sind sehr sehr zufrieden mit der Arbeit! Gerasimos hat sich bei der Vorbesprechung viel Zeit genommen und präzise und fein gearbeitet – das alles zum unschlagbaren Preis! Ich kann Selini Stickerei nur wärmstens weiterempfehlen!"
	},
	{
		name: "Efe Yashar",
		text: "Für die Mitarbeiter unseres Cafés haben wir die Arbeitskleidung bei Selini in Auftrag gegeben. Wir sind sehr zufrieden mit der tollen Qualität, dem Service und der Beratung sowie dem Preis-Leistungs-Verhältnis."
	}
];
---

<section class="py-24 bg-base-200">
	<div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl lg:max-w-7xl-extended">
		<!-- Header -->
		<div class="text-center mb-16">
			<h2 class="text-4xl md:text-5xl font-bold mb-4 text-neutral">{title}</h2>
			<p class="text-lg text-neutral/70 max-w-2xl mx-auto mb-6">{subtitle}</p>
			<a
				href={GOOGLE_PROFILE_URL}
				target="_blank"
				rel="noopener noreferrer"
				class="inline-flex items-center gap-2 px-5 py-3 rounded-xl bg-base-100 border border-base-300/30 shadow-sm hover:shadow-md hover:border-primary/30 transition-all duration-300 no-underline"
				aria-label="Google Bewertungen ansehen"
			>
				<span class="flex gap-0.5" aria-hidden="true">
					{Array.from({ length: 5 }).map((_, i) => (
						<svg class="w-5 h-5 fill-current" style={i < 5 ? "color: var(--color-yellow-accent);" : "color: var(--color-neutral-content);"} xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
							<path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
						</svg>
					))}
				</span>
				<span class="font-semibold text-neutral">{RATING} von {RATING_MAX} Sternen</span>
				<span class="text-neutral/60 text-sm">auf Google</span>
				<svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-neutral/60" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
				</svg>
			</a>
		</div>

		<!-- Testimonials Grid -->
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			{testimonials.map((testimonial) => (
				<div class="card bg-base-100 border border-base-300/30 shadow-sm hover:shadow-md transition-all duration-300 hover:border-primary/30 h-full flex flex-col">
					<div class="card-body flex-grow flex flex-col">
						<!-- Quote Icon -->
						<div class="mb-4">
							<svg class="w-10 h-10 text-primary/30" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
								<path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.996 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.984zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.432.917-3.995 3.638-3.995 5.849h3.983v10h-9.984z"/>
							</svg>
						</div>

						<!-- Quote -->
						<p class="text-neutral/80 leading-relaxed mb-6 flex-grow text-base">
							{testimonial.text}
						</p>

						<!-- Author Section -->
						<div class="flex items-center gap-3 pt-4 border-t border-base-300/30 mt-auto">
							<div class="avatar placeholder">
								<div class="bg-gradient-to-br from-primary/20 to-secondary/20 text-primary rounded-full w-12 ring-2 ring-neutral/30 flex items-center justify-center">
									<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6" style="color: var(--color-metrics-text);">
										<path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
									</svg>
								</div>
							</div>
							<div class="flex-1">
								<div class="font-semibold text-neutral text-base">{testimonial.name}</div>
								<div class="flex items-center gap-1 mt-1">
									<div class="flex gap-0.5">
										<svg class="w-4 h-4 fill-current" style="color: var(--color-yellow-accent);" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
											<path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
										</svg>
										<svg class="w-4 h-4 fill-current" style="color: var(--color-yellow-accent);" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
											<path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
										</svg>
										<svg class="w-4 h-4 fill-current" style="color: var(--color-yellow-accent);" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
											<path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
										</svg>
										<svg class="w-4 h-4 fill-current" style="color: var(--color-yellow-accent);" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
											<path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
										</svg>
										<svg class="w-4 h-4 fill-current" style="color: var(--color-yellow-accent);" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
											<path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
										</svg>
									</div>
									<span class="text-xs text-neutral/60 ml-1">Google Rezension</span>
								</div>
							</div>
						</div>
					</div>
				</div>
			))}
		</div>
	</div>
</section>
