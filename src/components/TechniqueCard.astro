---
/**
 * Single card for TechniqueMaterialsSection.
 * Icon and title use flex items-center so the icon is aligned to the same height as the header text.
 */
interface Props {
	title: string;
	iconBgClass?: string;
}
const { title, iconBgClass = 'bg-primary/10' } = Astro.props;
---
<div class="bg-base-200 rounded-2xl p-6 md:p-8">
	<div class="flex items-center gap-3 mb-6">
		<div class={`w-10 h-10 ${iconBgClass} rounded-lg flex items-center justify-center flex-shrink-0`}>
			<slot name="icon" />
		</div>
		<h3 class="text-2xl font-bold text-neutral leading-tight">{title}</h3>
	</div>
	<div class="technique-card-body">
		<slot />
	</div>
</div>
