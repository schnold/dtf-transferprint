---
interface Props {
	name: string;
	shortDescription: string;
	price: number;
	category: string;
	tags: string[];
	inStock: boolean;
}

const { name, shortDescription, price, category, tags, inStock } = Astro.props;

const formatPrice = (price: number) => {
	return new Intl.NumberFormat('de-DE', {
		style: 'currency',
		currency: 'EUR'
	}).format(price);
};
---

<div class="product-info space-y-6">
	<!-- Category Badge -->
	<div class="text-primary text-sm font-semibold tracking-wide uppercase">
		{category}
	</div>

	<!-- Product Title -->
	<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-neutral leading-tight tracking-tight">
		{name}
	</h1>

	<!-- Stock Status -->
	<div>
		{inStock ? (
			<div class="inline-flex items-center gap-2 text-success text-sm font-medium">
				<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
				</svg>
				Auf Lager - Versandfertig
			</div>
		) : (
			<div class="inline-flex items-center gap-2 text-error text-sm font-medium">
				<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
				</svg>
				Derzeit nicht verfügbar
			</div>
		)}
	</div>

	<!-- Price and Quantity: compact modern layout -->
	<div class="product-container rounded-2xl p-4 border border-primary/20">
		<div class="flex flex-col gap-4">
			<!-- Row 1: Quantity Selector -->
			<div class="flex items-center justify-between">
				<span class="text-xs font-semibold text-neutral/70 uppercase tracking-wider">Menge</span>
				<div class="flex items-center gap-1.5 bg-base-100 rounded-lg p-1 shadow-sm border border-base-300/20">
					<button
						class="btn btn-ghost btn-sm btn-square h-8 w-8 min-h-0 p-0 text-neutral hover:text-primary hover:bg-primary/10 transition-all rounded-md"
						id="quantity-decrease"
						aria-label="Menge reduzieren"
					>
						<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
							<path stroke-linecap="round" stroke-linejoin="round" d="M20 12H4" />
						</svg>
					</button>
					<input
						type="number"
						value="1"
						min="1"
						max="100"
						class="input input-sm w-14 h-8 text-center text-sm font-bold no-spinner rounded-md border-0 bg-transparent focus:outline-none focus:ring-2 focus:ring-primary/30"
						id="quantity-input"
					/>
					<button
						class="btn btn-ghost btn-sm btn-square h-8 w-8 min-h-0 p-0 text-neutral hover:text-primary hover:bg-primary/10 transition-all rounded-md"
						id="quantity-increase"
						aria-label="Menge erhöhen"
					>
						<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
							<path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
						</svg>
					</button>
				</div>
			</div>

			<!-- Divider -->
			<div class="border-t border-base-300/30"></div>

			<!-- Row 2: Pricing Information -->
			<div class="flex items-center justify-between gap-3">
				<!-- Unit Price -->
				<div class="flex flex-col gap-1">
					<span class="text-[10px] font-semibold text-neutral/60 uppercase tracking-wider">Stückpreis</span>
					<div class="flex items-baseline gap-1.5">
						<span id="original-price-container" class="hidden">
							<span class="text-xs text-neutral/40 line-through tabular-nums" id="original-unit-price"></span>
						</span>
						<span class="text-lg font-bold text-neutral tabular-nums" id="unit-price">
							{formatPrice(price)}
						</span>
						<span id="discount-badge" class="hidden badge badge-success badge-xs px-1.5 py-0 h-4 gap-0.5">
							<span id="discount-percent" class="text-[10px] font-bold"></span>
						</span>
					</div>
				</div>

				<!-- Total Price - Emphasized -->
				<div class="flex flex-col gap-1 items-end bg-primary/5 rounded-lg px-3 py-2 border border-primary/20">
					<span class="text-[10px] font-semibold text-primary/80 uppercase tracking-wider">Gesamt</span>
					<span class="text-2xl font-bold text-primary tabular-nums leading-none" id="total-price">
						{formatPrice(price)}
					</span>
				</div>
			</div>
		</div>
	</div>

	<!-- Description Dropdown -->
	<div class="collapse collapse-arrow bg-base-200/30 rounded-xl border border-base-300/20">
		<input type="checkbox" class="collapse-toggle" />
		<div class="collapse-title text-sm font-medium text-neutral/70 px-4 py-3 min-h-0">
			Produktbeschreibung
		</div>
		<div class="collapse-content px-4 pb-4">
			<p class="text-sm text-neutral/70 leading-relaxed">
				{shortDescription}
			</p>
		</div>
	</div>
</div>

<style>
	/* Hide number input spinner buttons */
	.no-spinner::-webkit-outer-spin-button,
	.no-spinner::-webkit-inner-spin-button {
		-webkit-appearance: none;
		margin: 0;
	}

	.no-spinner {
		-moz-appearance: textfield;
	}
</style>
