---
interface Props {
	name: string;
	shortDescription: string;
	price: number;
	category: string;
	tags: string[];
	inStock: boolean;
}

const { name, shortDescription, price, category, tags, inStock } = Astro.props;

const formatPrice = (price: number) => {
	return new Intl.NumberFormat('de-DE', {
		style: 'currency',
		currency: 'EUR'
	}).format(price);
};
---

<div class="product-info space-y-6">
	<!-- Category Badge -->
	<div class="text-primary text-sm font-semibold tracking-wide uppercase">
		{category}
	</div>

	<!-- Product Title -->
	<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-neutral leading-tight tracking-tight">
		{name}
	</h1>

	<!-- Stock Status -->
	<div>
		{inStock ? (
			<div class="inline-flex items-center gap-2 text-success text-sm font-medium">
				<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
				</svg>
				Auf Lager - Versandfertig
			</div>
		) : (
			<div class="inline-flex items-center gap-2 text-error text-sm font-medium">
				<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
				</svg>
				Derzeit nicht verfügbar
			</div>
		)}
	</div>

	<!-- Price and Quantity Row -->
	<div class="bg-base-200/30 rounded-xl p-4">
		<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
			<!-- Left: Quantity selector and Price per piece -->
			<div class="flex flex-col sm:flex-row items-start sm:items-center gap-4 flex-1">
				<!-- Quantity Selector -->
				<div class="flex items-center gap-3">
					<label class="text-neutral/70 text-sm font-medium whitespace-nowrap">Menge:</label>
					<div class="flex items-center gap-2">
						<button
							class="btn btn-sm btn-ghost btn-circle h-8 w-8 min-h-0 p-0 text-neutral hover:text-primary transition-colors"
							id="quantity-decrease"
							aria-label="Menge reduzieren"
						>
							<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
								<path stroke-linecap="round" stroke-linejoin="round" d="M15 12H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
							</svg>
						</button>
						<input
							type="number"
							value="1"
							min="1"
							max="100"
							class="input input-bordered input-sm w-16 text-center text-base font-semibold text-neutral border-2 no-spinner"
							id="quantity-input"
						/>
						<button
							class="btn btn-sm btn-ghost btn-circle h-8 w-8 min-h-0 p-0 text-neutral hover:text-primary transition-colors"
							id="quantity-increase"
							aria-label="Menge erhöhen"
						>
							<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
								<path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6m3-3H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
							</svg>
						</button>
					</div>
				</div>
				<!-- Price per piece -->
				<div>
					<span class="text-neutral/60 text-sm">Preis pro Stück</span>
					<div class="flex items-center gap-2 mt-1">
						<span id="original-price-container" class="hidden">
							<span class="text-sm text-neutral/50 line-through" id="original-unit-price"></span>
						</span>
						<span class="text-xl font-bold text-neutral" id="unit-price">
							{formatPrice(price)}
						</span>
						<span id="discount-badge" class="hidden badge badge-success badge-sm">
							<span id="discount-percent"></span>
						</span>
					</div>
				</div>
			</div>
			<!-- Right: Total price -->
			<div class="flex-1 sm:flex-initial sm:text-right">
				<span class="text-neutral/60 text-sm">Gesamtpreis</span>
				<div class="mt-1">
					<span class="text-2xl font-bold text-neutral" id="total-price">
						{formatPrice(price)}
					</span>
				</div>
			</div>
		</div>
	</div>

	<!-- Description Dropdown -->
	<div class="collapse collapse-arrow bg-base-200/30 rounded-xl border border-base-300/20">
		<input type="checkbox" class="collapse-toggle" />
		<div class="collapse-title text-sm font-medium text-neutral/70 px-4 py-3 min-h-0">
			Produktbeschreibung
		</div>
		<div class="collapse-content px-4 pb-4">
			<p class="text-sm text-neutral/70 leading-relaxed">
				{shortDescription}
			</p>
		</div>
	</div>
</div>

<style>
	/* Hide number input spinner buttons */
	.no-spinner::-webkit-outer-spin-button,
	.no-spinner::-webkit-inner-spin-button {
		-webkit-appearance: none;
		margin: 0;
	}

	.no-spinner {
		-moz-appearance: textfield;
	}
</style>
