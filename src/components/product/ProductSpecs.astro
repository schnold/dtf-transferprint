---
interface Props {
	specifications: Array<{
		label: string;
		value: string;
	}>;
}

const { specifications } = Astro.props;

// Filter out any empty specifications
const specs = specifications.filter(spec => spec.label && spec.value);
---

<div class="product-specs">
	<h2 class="text-2xl font-bold text-neutral mb-6">Technische Details</h2>

	<div class="card bg-base-200/50 shadow-sm border border-base-300/30">
		<div class="card-body p-6">
			<table class="table table-zebra">
				<tbody>
					{specs.map((spec) => (
						<tr class="border-base-300/30">
							<td class="font-semibold text-neutral w-1/3">
								{spec.label}
							</td>
							<td class="text-neutral/70">
								{spec.value}
							</td>
						</tr>
					))}
				</tbody>
			</table>
		</div>
	</div>
</div>
