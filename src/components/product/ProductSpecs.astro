---
interface Props {
	specifications: {
		material?: string;
		size?: string;
		colors?: string;
		durability?: string;
		printArea?: string;
		application?: string;
		careInstructions?: string;
	};
}

const { specifications } = Astro.props;

const specs = [
	{ label: "Material", value: specifications.material },
	{ label: "Größe", value: specifications.size },
	{ label: "Farben", value: specifications.colors },
	{ label: "Haltbarkeit", value: specifications.durability },
	{ label: "Druckbereich", value: specifications.printArea },
	{ label: "Anwendung", value: specifications.application },
	{ label: "Pflegehinweise", value: specifications.careInstructions },
].filter(spec => spec.value);
---

<div class="product-specs">
	<h2 class="text-2xl font-bold text-neutral mb-6">Technische Details</h2>

	<div class="card bg-base-200/50 shadow-sm border border-base-300/30">
		<div class="card-body p-6">
			<table class="table table-zebra">
				<tbody>
					{specs.map((spec) => (
						<tr class="border-base-300/30">
							<td class="font-semibold text-neutral w-1/3">
								{spec.label}
							</td>
							<td class="text-neutral/70">
								{spec.value}
							</td>
						</tr>
					))}
				</tbody>
			</table>
		</div>
	</div>
</div>
