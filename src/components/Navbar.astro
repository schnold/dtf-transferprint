---
import { SITE_CONFIG } from '../constants/site';
import AuthModal from './AuthModal.astro';
import CartDropdown from './CartDropdown.astro';
import CategoryIcon from './CategoryIcon.astro';
import { pool } from '../lib/db';

const user = Astro.locals.user;

// Optimized query: Fetch all categories with their products in ONE query using JSON aggregation
const client = await pool.connect();
let categoriesWithProducts = [];
try {
	const result = await client.query(`
		SELECT
			c.id,
			c.name,
			c.slug,
			c."displayOrder",
			c."parentId",
			c.icon,
			c.description,
			COALESCE(
				json_agg(
					json_build_object(
						'id', p.id,
						'slug', p.slug,
						'name', p.name,
						'shortDescription', p."shortDescription",
						'basePrice', p."basePrice",
						'isFeatured', p."isFeatured"
					)
					ORDER BY p."isFeatured" DESC, p.name
				) FILTER (WHERE p.id IS NOT NULL),
				'[]'::json
			) as products
		FROM categories c
		LEFT JOIN products p ON c.id = p."categoryId" AND p."isActive" = true
		WHERE c."isActive" = true AND c."parentId" IS NULL
		GROUP BY c.id, c.name, c.slug, c."displayOrder", c."parentId", c.icon, c.description
		ORDER BY c."displayOrder", c.name
	`);

	categoriesWithProducts = result.rows.map(cat => ({
		...cat,
		products: (Array.isArray(cat.products) ? cat.products : []).slice(0, 10).map(p => ({
			...p,
			basePrice: parseFloat(p.basePrice || 0),
		})),
	}));
} finally {
	client.release();
}

// Split categories into sections for mega menu display (max 3 columns)
const displayCategories = categoriesWithProducts.slice(0, 3);
const remainingCategories = categoriesWithProducts.slice(3);
