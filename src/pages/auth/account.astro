<script>
  import { authClient } from '../../lib/auth-client';

  const logoutButton = document.getElementById('logout-button');

  logoutButton?.addEventListener('click', async () => {
    try {
      await authClient.signOut();
      window.location.href = '/';
    } catch (error) {
      console.error('Logout error:', error);
      alert('Abmeldung fehlgeschlagen. Bitte versuchen Sie es erneut.');
    }
  });

  // Address management functions
  const addAddressForm = document.getElementById('add-address-form');
  const editAddressForm = document.getElementById('edit-address-form');

  // Add new address
  addAddressForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(addAddressForm);

    const data = {
      firstName: formData.get('firstName'),
      lastName: formData.get('lastName'),
      company: formData.get('company'),
      addressLine1: formData.get('addressLine1'),
      addressLine2: formData.get('addressLine2'),
      postalCode: formData.get('postalCode'),
      city: formData.get('city'),
      stateProvince: formData.get('stateProvince'),
      country: formData.get('country'),
      phone: formData.get('phone'),
      isDefault: formData.get('isDefault') === 'on',
      addressType: 'both',
    };

    try {
      const response = await fetch('/api/addresses/create', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      const result = await response.json();

      if (result.success) {
        document.getElementById('add-address-modal').close();
        window.location.reload();
      } else {
        alert('Fehler beim Hinzuf√ºgen der Adresse: ' + result.error.message);
      }
    } catch (error) {
      console.error('Error adding address:', error);
      alert('Fehler beim Hinzuf√ºgen der Adresse');
    }
  });

  // Edit address
  window.editAddress = (address) => {
    const form = document.getElementById('edit-address-form');
    form.querySelector('[name="id"]').value = address.id;
    form.querySelector('[name="firstName"]').value = address.firstName;
    form.querySelector('[name="lastName"]').value = address.lastName;
    form.querySelector('[name="company"]').value = address.company || '';
    form.querySelector('[name="addressLine1"]').value = address.addressLine1;
    form.querySelector('[name="addressLine2"]').value = address.addressLine2 || '';
    form.querySelector('[name="postalCode"]').value = address.postalCode;
    form.querySelector('[name="city"]').value = address.city;
    form.querySelector('[name="stateProvince"]').value = address.stateProvince || '';
    form.querySelector('[name="country"]').value = address.country;
    form.querySelector('[name="phone"]').value = address.phone || '';
    form.querySelector('[name="isDefault"]').checked = address.isDefault;

    document.getElementById('edit-address-modal').showModal();
  };

  // Update address
  editAddressForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(editAddressForm);

    const data = {
      id: formData.get('id'),
      firstName: formData.get('firstName'),
      lastName: formData.get('lastName'),
      company: formData.get('company'),
      addressLine1: formData.get('addressLine1'),
      addressLine2: formData.get('addressLine2'),
      postalCode: formData.get('postalCode'),
      city: formData.get('city'),
      stateProvince: formData.get('stateProvince'),
      country: formData.get('country'),
      phone: formData.get('phone'),
      isDefault: formData.get('isDefault') === 'on',
      addressType: 'both',
    };

    try {
      const response = await fetch('/api/addresses/update', {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      const result = await response.json();

      if (result.success) {
        document.getElementById('edit-address-modal').close();
        window.location.reload();
      } else {
        alert('Fehler beim Aktualisieren der Adresse: ' + result.error.message);
      }
    } catch (error) {
      console.error('Error updating address:', error);
      alert('Fehler beim Aktualisieren der Adresse');
    }
  });

  // Delete address
  window.deleteAddress = async (id, name) => {
    if (!confirm(`M√∂chten Sie die Adresse von ${name} wirklich l√∂schen?`)) {
      return;
    }

    try {
      const response = await fetch('/api/addresses/delete', {
        method: 'DELETE',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id }),
      });

      const result = await response.json();

      if (result.success) {
        window.location.reload();
      } else {
        alert('Fehler beim L√∂schen der Adresse: ' + result.error.message);
      }
    } catch (error) {
      console.error('Error deleting address:', error);
      alert('Fehler beim L√∂schen der Adresse');
    }
  };

  // Update shipping preference
  window.updateShippingPreference = async (shippingProfileId: string) => {
    const successMessage = document.getElementById('shipping-success-message');
    const errorMessage = document.getElementById('shipping-error-message');
    const errorText = document.getElementById('shipping-error-text');

    // Hide any existing messages
    successMessage?.classList.add('hidden');
    errorMessage?.classList.add('hidden');

    try {
      const response = await fetch('/api/cart/shipping/select', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ shippingProfileId }),
      });

      const result = await response.json();

      if (result.success) {
        // Show success message
        successMessage?.classList.remove('hidden');
        
        // Hide success message after 3 seconds
        setTimeout(() => {
          successMessage?.classList.add('hidden');
        }, 3000);
      } else {
        // Show error message
        if (errorText) {
          errorText.textContent = result.error?.message || 'Fehler beim Aktualisieren der Versandpr√§ferenz';
        }
        errorMessage?.classList.remove('hidden');
      }
    } catch (error) {
      console.error('Error updating shipping preference:', error);
      if (errorText) {
        errorText.textContent = 'Fehler beim Aktualisieren der Versandpr√§ferenz';
      }
      errorMessage?.classList.remove('hidden');
    }
  };
</script>
