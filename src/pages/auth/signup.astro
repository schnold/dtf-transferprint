---
import Layout from '../../layouts/Layout.astro';

const session = Astro.locals.session;

// If already logged in, redirect to home
if (session) {
  return Astro.redirect('/');
}
---

<Layout title="Sign Up - DTF Transfer Print">
  <div class="min-h-screen flex items-center justify-center bg-base-200 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
      <div>
        <h2 class="mt-6 text-center text-3xl font-extrabold">
          Konto erstellen
        </h2>
      </div>

      <form id="signup-form" class="mt-8 space-y-6">
        <div class="rounded-md shadow-sm space-y-2">
          <div>
            <label for="name" class="sr-only">Vollständiger Name</label>
            <input
              id="name"
              name="name"
              type="text"
              autocomplete="name"
              required
              class="input input-bordered w-full rounded-md"
              placeholder="Vollständiger Name"
            />
          </div>
          <div>
            <label for="email" class="sr-only">E-Mail-Adresse</label>
            <input
              id="email"
              name="email"
              type="email"
              autocomplete="email"
              required
              class="input input-bordered w-full rounded-md"
              placeholder="E-Mail-Adresse"
            />
          </div>
          <div>
            <label for="password" class="sr-only">Passwort</label>
            <input
              id="password"
              name="password"
              type="password"
              autocomplete="new-password"
              required
              minlength="12"
              class="input input-bordered w-full rounded-md"
              placeholder="Passwort (min. 12 Zeichen)"
            />
            <p class="text-xs text-base-content/70 mt-1 px-2">
              Muss Groß- und Kleinbuchstaben, Zahlen und Sonderzeichen enthalten
            </p>
          </div>
          <div>
            <label for="confirmPassword" class="sr-only">Passwort bestätigen</label>
            <input
              id="confirmPassword"
              name="confirmPassword"
              type="password"
              autocomplete="new-password"
              required
              minlength="12"
              class="input input-bordered w-full rounded-md"
              placeholder="Passwort bestätigen"
            />
          </div>

          <div class="divider text-xs text-base-content/50">Geschäftsdaten</div>

          <div>
            <label for="umsatzsteuernummer" class="sr-only">Umsatzsteuernummer (USt-IdNr.)</label>
            <input
              id="umsatzsteuernummer"
              name="umsatzsteuernummer"
              type="text"
              required
              class="input input-bordered w-full rounded-md"
              placeholder="Umsatzsteuernummer (z.B. DE123456789)"
              pattern="DE[0-9]{9}"
              title="Deutsche USt-IdNr. im Format DE + 9 Ziffern"
            />
            <p class="text-xs text-base-content/70 mt-1 px-2">
              Format: DE gefolgt von 9 Ziffern (z.B. DE123456789)
            </p>
          </div>

          <div class="form-control">
            <label class="label cursor-pointer justify-start gap-3">
              <input
                type="checkbox"
                id="gewerbebetreiber"
                name="gewerbebetreiber"
                required
                class="checkbox checkbox-primary"
              />
              <span class="label-text">
                Ich bestätige, dass ich Gewerbetreibender bin und diese Plattform ausschließlich für gewerbliche Zwecke nutze. <span class="text-error">*</span>
              </span>
            </label>
          </div>
        </div>

        <div id="error-message" class="alert alert-error hidden">
          <span></span>
        </div>

        <div id="success-message" class="alert alert-success hidden">
          <div>
            <p class="font-semibold mb-1">Konto erstellt!</p>
            <p>Bitte bestätige deine E-Mail-Adresse. Wir haben dir eine Bestätigungs-E-Mail gesendet.</p>
          </div>
        </div>

        <div>
          <button
            type="submit"
            class="btn btn-primary w-full"
            id="submit-button"
          >
            Registrieren
          </button>
        </div>

        <div class="text-center">
          <p class="text-sm">
            Bereits ein Konto?
            <a href="/auth/login" class="link link-primary">
              Anmelden
            </a>
          </p>
        </div>
      </form>
    </div>
  </div>
</Layout>

<script>
  import { authClient } from '../../lib/auth-client';

  const form = document.getElementById('signup-form') as HTMLFormElement;
  const errorMessage = document.getElementById('error-message') as HTMLDivElement;
  const successMessage = document.getElementById('success-message') as HTMLDivElement;
  const submitButton = document.getElementById('submit-button') as HTMLButtonElement;

  // Password validation regex
  const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{12,}$/;

  // German VAT number validation regex (DE + 9 digits)
  const vatRegex = /^DE[0-9]{9}$/;

  // Function to translate error messages to German
  function translateError(errorMessage: string): string {
    const errorLower = errorMessage.toLowerCase();

    // Rate limiting errors
    if (errorLower.includes('too many requests') || errorLower.includes('rate limit')) {
      return 'Zu viele Anfragen. Bitte versuche es später erneut.';
    }

    // Email verification errors
    if (errorLower.includes('email') && (errorLower.includes('not verified') || errorLower.includes('unverified') || errorLower.includes('verification'))) {
      return 'E-Mail-Adresse nicht verifiziert. Bitte bestätige deine E-Mail-Adresse, bevor du dich anmeldest.';
    }
    if (errorLower.includes('email verification required') || errorLower.includes('please verify')) {
      return 'E-Mail-Verifizierung erforderlich. Bitte bestätige deine E-Mail-Adresse.';
    }

    // Common auth errors (including Better Auth default message)
    if (errorLower.includes('invalid email or password') || errorLower.includes('invalid credentials') || errorLower.includes('wrong password') || errorLower.includes('incorrect')) {
      return 'Ungültige E-Mail-Adresse oder Passwort.';
    }
    if (errorLower.includes('user not found') || errorLower.includes('no account')) {
      return 'Kein Konto mit dieser E-Mail-Adresse gefunden.';
    }
    if (errorLower.includes('email already exists') || errorLower.includes('already registered') || errorLower.includes('already in use')) {
      return 'Diese E-Mail-Adresse ist bereits registriert.';
    }
    if (errorLower.includes('password') && (errorLower.includes('short') || errorLower.includes('length'))) {
      return 'Passwort zu kurz. Mindestens 12 Zeichen erforderlich.';
    }
    if (errorLower.includes('password') && errorLower.includes('weak')) {
      return 'Passwort zu schwach. Verwende Groß- und Kleinbuchstaben, Zahlen und Sonderzeichen.';
    }
    if (errorLower.includes('passwords do not match')) {
      return 'Passwörter stimmen nicht überein.';
    }

    // Account status errors
    if (errorLower.includes('account locked') || errorLower.includes('account disabled')) {
      return 'Dein Konto wurde gesperrt. Bitte kontaktiere den Support.';
    }
    if (errorLower.includes('account suspended')) {
      return 'Dein Konto wurde vorübergehend gesperrt.';
    }

    // Session errors
    if (errorLower.includes('session expired') || errorLower.includes('session invalid')) {
      return 'Deine Sitzung ist abgelaufen. Bitte melde dich erneut an.';
    }

    // Network errors
    if (errorLower.includes('network error') || errorLower.includes('failed to fetch')) {
      return 'Netzwerkfehler. Bitte überprüfe deine Internetverbindung.';
    }
    if (errorLower.includes('timeout') || errorLower.includes('timed out')) {
      return 'Zeitüberschreitung. Bitte versuche es erneut.';
    }

    // Server errors
    if (errorLower.includes('server error') || errorLower.includes('internal error')) {
      return 'Serverfehler. Bitte versuche es später erneut.';
    }

    // Generic errors
    if (errorLower.includes('something went wrong')) {
      return 'Ein Fehler ist aufgetreten. Bitte versuche es erneut.';
    }

    // Return original message if no translation found
    return errorMessage;
  }

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Hide any previous messages
    errorMessage.classList.add('hidden');
    successMessage.classList.add('hidden');
    submitButton.disabled = true;
    submitButton.textContent = 'Konto wird erstellt...';

    const formData = new FormData(form);
    const name = formData.get('name') as string;
    const email = formData.get('email') as string;
    const password = formData.get('password') as string;
    const confirmPassword = formData.get('confirmPassword') as string;
    const umsatzsteuernummer = (formData.get('umsatzsteuernummer') as string)?.trim().toUpperCase();
    const gewerbebetreiber = formData.get('gewerbebetreiber') === 'on';

    try {
      // Validate passwords match
      if (password !== confirmPassword) {
        throw new Error('Passwörter stimmen nicht überein');
      }

      // Validate password strength
      if (!passwordRegex.test(password)) {
        throw new Error(
          'Passwort muss mindestens 12 Zeichen lang sein und Groß- und Kleinbuchstaben, Zahlen und Sonderzeichen enthalten'
        );
      }

      // Validate Gewerbebetreiber checkbox
      if (!gewerbebetreiber) {
        throw new Error('Sie müssen bestätigen, dass Sie Gewerbetreibender sind.');
      }

      // Validate German VAT number format
      if (!umsatzsteuernummer) {
        throw new Error('Bitte geben Sie Ihre Umsatzsteuernummer ein.');
      }

      if (!vatRegex.test(umsatzsteuernummer)) {
        throw new Error('Die Umsatzsteuernummer muss im Format DE + 9 Ziffern sein (z.B. DE123456789).');
      }

      // Sign up with standard Better Auth fields
      const result = await authClient.signUp.email({
        email,
        password,
        name,
      });

      // If signup successful, store business info in database
      if (!result.error && result.data) {
        try {
          // Store custom business fields via API endpoint
          await fetch('/api/auth/update-business-info', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              email,
              gewerbebetreiber,
              umsatzsteuernummer,
            }),
          });
        } catch (err) {
          console.error('Failed to save business info:', err);
          // Continue anyway - user is created, business info can be added later
        }
      }

      if (result.error) {
        throw new Error(result.error.message || 'Fehler beim Erstellen des Kontos');
      }

      // Show success message
      successMessage.classList.remove('hidden');
      form.reset();

      // Redirect to login after 3 seconds
      setTimeout(() => {
        window.location.href = '/auth/login';
      }, 3000);
    } catch (error) {
      console.error('Signup error:', error);
      const errorMsg = error instanceof Error ? error.message : 'Ein Fehler ist aufgetreten';
      errorMessage.querySelector('span')!.textContent = translateError(errorMsg);
      errorMessage.classList.remove('hidden');
      submitButton.disabled = false;
      submitButton.textContent = 'Registrieren';
    }
  });
</script>
