---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import { pool } from '@/lib/db';

// Fetch all active products with their categories
const client = await pool.connect();
try {
  var productsResult = await client.query(`
    SELECT
      p.*,
      c.name as "categoryName",
      c.slug as "categorySlug",
      (SELECT url FROM "productImages" WHERE "productId" = p.id ORDER BY "isPrimary" DESC, "displayOrder" LIMIT 1) as "primaryImage"
    FROM products p
    LEFT JOIN categories c ON p."categoryId" = c.id
    WHERE p."isActive" = true
    ORDER BY p."isFeatured" DESC, p."createdAt" DESC
  `);

  var categoriesResult = await client.query(`
    SELECT id, name, slug
    FROM categories
    WHERE "isActive" = true
    ORDER BY "displayOrder", name
  `);
} finally {
  client.release();
}

const products = productsResult.rows.map(p => ({
  ...p,
  basePrice: parseFloat(p.basePrice),
  compareAtPrice: p.compareAtPrice ? parseFloat(p.compareAtPrice) : null,
}));

const categories = categoriesResult.rows;
const selectedCategory = Astro.url.searchParams.get('category');
const filteredProducts = selectedCategory
  ? products.filter(p => p.categorySlug === selectedCategory)
  : products;

// Group products by category when showing all categories
const productsByCategory = selectedCategory
  ? null
  : categories
      .map(category => ({
        category: category,
        products: products.filter(p => p.categorySlug === category.slug)
      }))
      .filter(group => group.products.length > 0);
---

<Layout title="Alle Produkte | DTF Transfer Print" description="Entdecken Sie unser komplettes Sortiment an DTF Transfer Produkten - hochwertig, schnell und zuverlässig.">
  <Navbar />

  <!-- Breadcrumbs -->
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl lg:max-w-7xl-extended pt-8 pb-6">
    <nav class="flex items-center gap-2 text-sm text-neutral/60">
      <a href="/" class="hover:text-primary transition-colors">Startseite</a>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
      <span class="text-neutral font-medium">Produkte</span>
    </nav>
  </div>

  <!-- Main Content -->
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl lg:max-w-7xl-extended pb-32">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 text-neutral">Unsere Produkte</h1>
      <p class="text-lg text-neutral/70">
        Hochwertige DTF Transfer Produkte für professionelle Ergebnisse
      </p>
    </div>

    <!-- Category Filter -->
    {categories.length > 0 && (
      <div class="card bg-base-100 shadow-sm border border-base-300/30 mb-8">
        <div class="card-body p-4">
          <div class="flex flex-wrap gap-2">
            <a
              href="/products/"
              class={`btn btn-sm transition-all ${
                !selectedCategory
                  ? 'btn-primary'
                  : 'btn-ghost'
              }`}
            >
              Alle Kategorien
            </a>
            {categories.map((cat) => (
              <a
                href={`/products/?category=${cat.slug}`}
                class={`btn btn-sm transition-all ${
                  selectedCategory === cat.slug
                    ? 'btn-primary'
                    : 'btn-ghost'
                }`}
              >
                {cat.name}
              </a>
            ))}
          </div>
        </div>
      </div>
    )}

    <!-- Products Display -->
    {filteredProducts.length > 0 ? (
      selectedCategory ? (
        <!-- Single Category View -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {filteredProducts.map((product) => (
            <a
              href={`/product/${product.slug}`}
              class="card bg-base-100 shadow-md overflow-hidden border border-base-300/30"
            >
              <!-- Product Image -->
              <figure class="aspect-square bg-base-200 flex items-center justify-center overflow-hidden">
                {product.primaryImage ? (
                  <img
                    src={product.primaryImage}
                    alt={product.name}
                    class="w-full h-full object-cover"
                  />
                ) : (
                  <div class="text-neutral/40 text-center p-8">
                    <svg class="w-24 h-24 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <p class="text-sm">Kein Bild verfügbar</p>
                  </div>
                )}
              </figure>

              <!-- Product Info -->
              <div class="card-body p-5">
                <!-- Category Badge -->
                {product.categoryName && (
                  <div class="mb-2 flex flex-wrap gap-2">
                    <span class="badge badge-secondary badge-sm">
                      {product.categoryName}
                    </span>
                    {product.isFeatured && (
                      <span class="badge badge-warning badge-sm gap-1">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                        </svg>
                        Featured
                      </span>
                    )}
                  </div>
                )}

                <!-- Product Name -->
                <h2 class="card-title text-lg text-neutral mb-2">
                  {product.name}
                </h2>

                <!-- Short Description -->
                <p class="text-sm text-neutral/70 mb-4 line-clamp-2">
                  {product.shortDescription}
                </p>

                <!-- Price -->
                <div class="flex items-baseline gap-2 mb-4">
                  <span class="text-2xl font-bold text-primary">
                    {product.basePrice.toFixed(2)}€
                  </span>
                  {product.compareAtPrice && (
                    <span class="text-sm text-neutral/50 line-through">
                      {product.compareAtPrice.toFixed(2)}€
                    </span>
                  )}
                  <span class="text-sm text-neutral/60">ab</span>
                </div>

                <!-- Additional Info -->
                <div class="card-actions justify-start gap-2">
                  {product.isBlockout && (
                    <span class="badge badge-outline badge-sm">Blockout</span>
                  )}
                  {product.acceptsFileUpload && (
                    <span class="badge badge-outline badge-sm gap-1">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                      </svg>
                      Upload möglich
                    </span>
                  )}
                </div>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <!-- All Categories View - Grouped by Category -->
        <div class="space-y-12">
          {productsByCategory && productsByCategory.map((group) => (
            <div class="space-y-6">
              <!-- Category Heading -->
              <div class="flex items-center gap-4">
                <div class="flex-1">
                  <h2 class="text-3xl font-bold text-neutral mb-2">
                    {group.category.name}
                  </h2>
                  <div class="h-1 w-20 bg-primary rounded-full"></div>
                </div>
                <a
                  href={`/products/?category=${group.category.slug}`}
                  class="btn btn-ghost btn-sm"
                >
                  Alle anzeigen
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>

              <!-- Products Grid for this Category -->
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {group.products.map((product) => (
                  <a
                    href={`/product/${product.slug}`}
                    class="card bg-base-100 shadow-md overflow-hidden border border-base-300/30"
                  >
                    <!-- Product Image -->
                    <figure class="aspect-square bg-base-200 flex items-center justify-center overflow-hidden">
                      {product.primaryImage ? (
                        <img
                          src={product.primaryImage}
                          alt={product.name}
                          class="w-full h-full object-cover"
                        />
                      ) : (
                        <div class="text-neutral/40 text-center p-8">
                          <svg class="w-24 h-24 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                          </svg>
                          <p class="text-sm">Kein Bild verfügbar</p>
                        </div>
                      )}
                    </figure>

                    <!-- Product Info -->
                    <div class="card-body p-5">
                      <!-- Category Badge -->
                      {product.categoryName && (
                        <div class="mb-2 flex flex-wrap gap-2">
                          <span class="badge badge-secondary badge-sm">
                            {product.categoryName}
                          </span>
                          {product.isFeatured && (
                            <span class="badge badge-warning badge-sm gap-1">
                              <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                              </svg>
                              Featured
                            </span>
                          )}
                        </div>
                      )}

                      <!-- Product Name -->
                      <h2 class="card-title text-lg text-neutral mb-2">
                        {product.name}
                      </h2>

                      <!-- Short Description -->
                      <p class="text-sm text-neutral/70 mb-4 line-clamp-2">
                        {product.shortDescription}
                      </p>

                      <!-- Price -->
                      <div class="flex items-baseline gap-2 mb-4">
                        <span class="text-2xl font-bold text-primary">
                          {product.basePrice.toFixed(2)}€
                        </span>
                        {product.compareAtPrice && (
                          <span class="text-sm text-neutral/50 line-through">
                            {product.compareAtPrice.toFixed(2)}€
                          </span>
                        )}
                        <span class="text-sm text-neutral/60">ab</span>
                      </div>

                      <!-- Additional Info -->
                      <div class="card-actions justify-start gap-2">
                        {product.isBlockout && (
                          <span class="badge badge-outline badge-sm">Blockout</span>
                        )}
                        {product.acceptsFileUpload && (
                          <span class="badge badge-outline badge-sm gap-1">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                            </svg>
                            Upload möglich
                          </span>
                        )}
                      </div>
                    </div>
                  </a>
                ))}
              </div>
            </div>
          ))}
        </div>
      )
    ) : (
      <div class="card bg-base-100 shadow-sm border border-base-300/30">
        <div class="card-body p-12 text-center">
          <svg class="w-24 h-24 mx-auto mb-4 text-neutral/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
          </svg>
          <h2 class="text-2xl font-bold text-neutral mb-2">Keine Produkte gefunden</h2>
          <p class="text-neutral/70 mb-6">
            {selectedCategory
              ? 'In dieser Kategorie sind derzeit keine Produkte verfügbar.'
              : 'Derzeit sind keine Produkte verfügbar.'}
          </p>
          {selectedCategory && (
            <a href="/products/" class="btn btn-primary">
              Alle Kategorien anzeigen
            </a>
          )}
        </div>
      </div>
    )}
  </div>
</Layout>
