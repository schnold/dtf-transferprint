  .anfragen-status-tabs {
    border-bottom: 1px solid var(--color-base-300);
    background: var(--color-base-200);
  }

  .anfragen-status-tablist {
    display: flex;
    flex-wrap: wrap;
    gap: 0;
    padding: 0 0.5rem 0 0.5rem;
    min-height: 2.75rem;
  }

  .anfragen-status-tab {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-weight: 500;
