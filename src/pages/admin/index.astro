---
import AdminLayout from '../../layouts/AdminLayout.astro';
import { getAnalytics } from '../../lib/db';
import { getCachedAnalytics, setCachedAnalytics } from '../../lib/redis';

// Try to get analytics from cache first, then from database
let analytics = await getCachedAnalytics();

if (!analytics) {
  analytics = await getAnalytics();
  // Cache for 5 minutes
  await setCachedAnalytics(analytics);
}

const stats = [
  {
    name: 'Gesamte Benutzer',
    value: analytics.totalUsers,
    icon: 'M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z',
    color: 'primary',
    description: 'Registrierte Benutzer'
  },
  {
    name: 'Verifizierte Benutzer',
    value: analytics.verifiedUsers,
    icon: 'M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z',
    color: 'success',
    description: 'E-Mail verifiziert'
  },
  {
    name: 'Aktive Sessions',
    value: analytics.activeSessions,
    icon: 'M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z',
    color: 'info',
    description: 'Aktuell eingeloggt'
  },
  {
    name: 'Neue Anmeldungen',
    value: analytics.recentSignups,
    icon: 'M18 7.5v3m0 0v3m0-3h3m-3 0h-3m-2.25-4.125a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0ZM3 19.235v-.11a6.375 6.375 0 0 1 12.75 0v.109A12.318 12.318 0 0 1 9.374 21c-2.331 0-4.512-.645-6.374-1.766Z',
    color: 'accent',
    description: 'Letzte 7 Tage'
  },
  {
    name: 'Administratoren',
    value: analytics.totalAdmins,
    icon: 'M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.325.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 0 1 1.37.49l1.296 2.247a1.125 1.125 0 0 1-.26 1.431l-1.003.827c-.293.241-.438.613-.43.992a7.723 7.723 0 0 1 0 .255c-.008.378.137.75.43.991l1.004.827c.424.35.534.955.26 1.43l-1.298 2.247a1.125 1.125 0 0 1-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.47 6.47 0 0 1-.22.128c-.331.183-.581.495-.644.869l-.213 1.281c-.09.543-.56.94-1.11.94h-2.594c-.55 0-1.019-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 0 1-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 0 1-1.369-.49l-1.297-2.247a1.125 1.125 0 0 1 .26-1.431l1.004-.827c.292-.24.437-.613.43-.991a6.932 6.932 0 0 1 0-.255c.007-.38-.138-.751-.43-.992l-1.004-.827a1.125 1.125 0 0 1-.26-1.43l1.297-2.247a1.125 1.125 0 0 1 1.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.086.22-.128.332-.183.582-.495.644-.869l.214-1.28Z',
    color: 'warning',
    description: 'Mit Admin-Rechten'
  },
  {
    name: 'Gesperrte Konten',
    value: analytics.lockedAccounts,
    icon: 'M16.5 10.5V6.75a4.5 4.5 0 1 0-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 0 0 2.25-2.25v-6.75a2.25 2.25 0 0 0-2.25-2.25H6.75a2.25 2.25 0 0 0-2.25 2.25v6.75a2.25 2.25 0 0 0 2.25 2.25Z',
    color: 'error',
    description: 'Sicherheitssperre aktiv'
  }
];

// Calculate percentages
const verificationRate = analytics.totalUsers > 0
  ? Math.round((analytics.verifiedUsers / analytics.totalUsers) * 100)
  : 0;

const sessionRate = analytics.totalSessions > 0
  ? Math.round((analytics.activeSessions / analytics.totalSessions) * 100)
  : 0;
---

<AdminLayout title="Admin Dashboard" currentPage="dashboard">
  <!-- Page Header -->
  <div class="mb-6">
    <h2 class="text-3xl font-bold text-base-content mb-2">Dashboard</h2>
    <p class="text-base-content/60">Übersicht über Ihre Plattform-Statistiken</p>
  </div>

  <!-- Quick Actions -->
  <div class="card bg-gradient-to-br from-base-100 to-base-200/30 shadow-xl mb-8 border border-base-300/30">
    <div class="card-body">
      <h3 class="card-title text-lg mb-4 flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6" style="color: var(--color-yellow-accent-dark);">
          <path stroke-linecap="round" stroke-linejoin="round" d="m3.75 13.5 10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75Z" />
        </svg>
        Schnellaktionen
      </h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-3">
        <a href="/admin/users" class="btn btn-admin-primary gap-2 justify-start">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 0 0 2.625.372 9.337 9.337 0 0 0 4.121-.952 4.125 4.125 0 0 0-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 0 1 8.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0 1 11.964-3.07M12 6.375a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0Zm8.25 2.25a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z" />
          </svg>
          Benutzer verwalten
        </a>
        <button class="btn btn-admin-primary gap-2 justify-start" onclick="location.reload()">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99" />
          </svg>
          Dashboard aktualisieren
        </button>
        <a href="/admin/email-templates" class="btn btn-admin-primary gap-2 justify-start">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
          </svg>
          E-Mail-Vorlagen
        </a>
        <a href="/admin/settings" class="btn btn-admin-primary gap-2 justify-start">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.325.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 0 1 1.37.49l1.296 2.247a1.125 1.125 0 0 1-.26 1.431l-1.003.827c-.293.241-.438.613-.43.992a7.723 7.723 0 0 1 0 .255c-.008.378.137.75.43.991l1.004.827c.424.35.534.955.26 1.43l-1.298 2.247a1.125 1.125 0 0 1-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.47 6.47 0 0 1-.22.128c-.331.183-.581.495-.644.869l-.213 1.281c-.09.543-.56.94-1.11.94h-2.594c-.55 0-1.019-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 0 1-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 0 1-1.369-.49l-1.297-2.247a1.125 1.125 0 0 1 .26-1.431l1.004-.827c.292-.24.437-.613.43-.991a6.932 6.932 0 0 1 0-.255c.007-.38-.138-.751-.43-.992l-1.004-.827a1.125 1.125 0 0 1-.26-1.43l1.297-2.247a1.125 1.125 0 0 1 1.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.086.22-.128.332-.183.582-.495.644-.869l.214-1.28Z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
          </svg>
          Einstellungen
        </a>
        <a href="/" class="btn btn-admin-primary gap-2 justify-start">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 12 8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
          </svg>
          Zur Website
        </a>
      </div>
    </div>
  </div>

  <!-- Stats Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
    {stats.map((stat) => (
      <div class="card bg-base-100 shadow-md hover:shadow-lg transition-shadow">
        <div class="card-body">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <p class="text-sm text-base-content/60 mb-1">{stat.name}</p>
              <p class="text-3xl font-bold text-base-content mb-1">{stat.value}</p>
              <p class="text-xs text-base-content/50">{stat.description}</p>
            </div>
            <div class="w-12 h-12 rounded-lg flex items-center justify-center flex-shrink-0" style="background-color: rgba(74, 93, 58, 0.1);">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6" style="color: var(--color-metrics-text);">
                <path stroke-linecap="round" stroke-linejoin="round" d={stat.icon} />
              </svg>
            </div>
          </div>
        </div>
      </div>
    ))}
  </div>

  <!-- Additional Analytics -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- User Verification Stats -->
    <div class="card bg-base-100 shadow-md">
      <div class="card-body">
        <h3 class="card-title text-lg mb-4">Benutzer-Verifizierung</h3>
        <div class="space-y-4">
          <div>
            <div class="flex justify-between items-center mb-2">
              <span class="text-sm text-base-content/70">Verifizierte Benutzer</span>
              <span class="text-sm font-semibold" style="color: var(--color-metrics-text);">{analytics.verifiedUsers} ({verificationRate}%)</span>
            </div>
            <progress class="progress w-full" style="--progress-color: var(--color-metrics-text);" value={verificationRate} max="100"></progress>
          </div>
          <div>
            <div class="flex justify-between items-center mb-2">
              <span class="text-sm text-base-content/70">Nicht verifiziert</span>
              <span class="text-sm font-semibold" style="color: var(--color-yellow-accent-dark);">{analytics.unverifiedUsers} ({100 - verificationRate}%)</span>
            </div>
            <progress class="progress w-full" style="--progress-color: var(--color-yellow-accent-dark);" value={100 - verificationRate} max="100"></progress>
          </div>
        </div>
      </div>
    </div>

    <!-- Session Activity -->
    <div class="card bg-base-100 shadow-md">
      <div class="card-body">
        <h3 class="card-title text-lg mb-4">Session-Aktivität</h3>
        <div class="space-y-4">
          <div>
            <div class="flex justify-between items-center mb-2">
              <span class="text-sm text-base-content/70">Aktive Sessions</span>
              <span class="text-sm font-semibold" style="color: var(--color-metrics-text);">{analytics.activeSessions} ({sessionRate}%)</span>
            </div>
            <progress class="progress w-full" style="--progress-color: var(--color-metrics-text);" value={sessionRate} max="100"></progress>
          </div>
          <div class="stats stats-vertical lg:stats-horizontal w-full bg-base-200/50">
            <div class="stat py-3 px-4">
              <div class="stat-title text-xs">Gesamt</div>
              <div class="stat-value text-2xl">{analytics.totalSessions}</div>
              <div class="stat-desc text-xs">Alle Sessions</div>
            </div>
            <div class="stat py-3 px-4">
              <div class="stat-title text-xs">Aktiv</div>
              <div class="stat-value text-2xl" style="color: var(--color-metrics-text);">{analytics.activeSessions}</div>
              <div class="stat-desc text-xs">Eingeloggt</div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>

  <!-- System Info -->
  <div class="alert alert-admin shadow-lg">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
    <div>
      <div class="font-semibold">Caching aktiviert</div>
      <div class="text-sm opacity-80">Analytics werden für 5 Minuten gecacht. Die Seite aktualisiert sich automatisch alle 5 Minuten.</div>
    </div>
  </div>
</AdminLayout>

<script>
  // Auto-refresh every 5 minutes
  setTimeout(() => {
    location.reload();
  }, 5 * 60 * 1000);
</script>
