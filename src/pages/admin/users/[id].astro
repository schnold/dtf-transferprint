---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { pool } from '../../../lib/db';

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/admin/users');
}

// Fetch user details
const client = await pool.connect();
let user: any = null;
let userAddresses: any[] = [];

try {
  const userResult = await client.query(
    'SELECT * FROM "user" WHERE id = $1',
    [id]
  );

  if (userResult.rows.length === 0) {
    return Astro.redirect('/admin/users');
  }

  user = userResult.rows[0];

  // Fetch user addresses
  const addressResult = await client.query(
    'SELECT * FROM "userAddresses" WHERE "userId" = $1 ORDER BY "isDefault" DESC, "createdAt" DESC',
    [id]
  );
  userAddresses = addressResult.rows;
} catch (error) {
  console.error('Error fetching user data:', error);
  return Astro.redirect('/admin/users');
} finally {
  client.release();
}

const formatDate = (date: Date) => {
  return new Date(date).toLocaleDateString('de-DE', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit',
  });
};
---

<AdminLayout title={`Benutzer: ${user.name}`} currentPage="users">
  <!-- Page Header -->
  <div class="mb-6">
    <div class="flex items-center gap-3 mb-3">
      <a href="/admin/users" class="btn btn-ghost btn-sm gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
        </svg>
        Zurück
      </a>
    </div>
    <h2 class="text-3xl font-bold text-base-content mb-2">Benutzerdetails</h2>
    <p class="text-base-content/60">Details und Adressen von {user.name}</p>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- User Information -->
    <div class="lg:col-span-1">
      <div class="card bg-base-100 border border-base-300/30 shadow-xl">
        <div class="card-body">
          <h3 class="card-title text-lg mb-4 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-primary">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
            </svg>
            Benutzerdaten
          </h3>

          <div class="space-y-4">
            <div>
              <label class="label"><span class="label-text text-sm font-medium opacity-60">Name</span></label>
              <p class="text-base font-semibold">{user.name}</p>
            </div>

            <div>
              <label class="label"><span class="label-text text-sm font-medium opacity-60">E-Mail</span></label>
              <p class="text-base">{user.email}</p>
            </div>

            <div>
              <label class="label"><span class="label-text text-sm font-medium opacity-60">Status</span></label>
              <div class="flex flex-wrap gap-2">
                {user.emailVerified ? (
                  <span class="badge badge-success gap-1">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-3 h-3">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                    </svg>
                    Verifiziert
                  </span>
                ) : (
                  <span class="badge badge-warning gap-1">Nicht verifiziert</span>
                )}
                {user.isAdmin && (
                  <span class="badge badge-primary gap-1">Admin</span>
                )}
                {user.accountLocked && (
                  <span class="badge badge-error gap-1">Gesperrt</span>
                )}
              </div>
            </div>

            {user.gewerbebetreiber && (
              <div>
                <label class="label"><span class="label-text text-sm font-medium opacity-60">Gewerbebetreiber</span></label>
                <p class="text-base">Ja</p>
              </div>
            )}

            {user.umsatzsteuernummer && (
              <div>
                <label class="label"><span class="label-text text-sm font-medium opacity-60">USt-IdNr.</span></label>
                <p class="text-base font-mono">{user.umsatzsteuernummer}</p>
              </div>
            )}

            <div>
              <label class="label"><span class="label-text text-sm font-medium opacity-60">Rabatt</span></label>
              <p class="text-base font-semibold">{user.discountPercent || 0}%</p>
            </div>

            <div>
              <label class="label"><span class="label-text text-sm font-medium opacity-60">Registriert</span></label>
              <p class="text-sm">{formatDate(user.createdAt)}</p>
            </div>

            {user.lastLoginAt && (
              <div>
                <label class="label"><span class="label-text text-sm font-medium opacity-60">Letzter Login</span></label>
                <p class="text-sm">{formatDate(user.lastLoginAt)}</p>
              </div>
            )}
          </div>
        </div>
      </div>
    </div>

    <!-- Addresses -->
    <div class="lg:col-span-2">
      <div class="card bg-base-100 border border-base-300/30 shadow-xl">
        <div class="card-body">
          <div class="flex items-center justify-between mb-4">
            <h3 class="card-title text-lg flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-primary">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
              </svg>
              Adressen ({userAddresses.length})
            </h3>
            <button onclick="document.getElementById('add-address-modal').showModal()" class="btn btn-primary btn-sm gap-1.5">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
              </svg>
              Neue Adresse
            </button>
          </div>

          {userAddresses.length === 0 ? (
            <div class="text-center py-12">
              <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-base-200 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-base-content/40">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
                </svg>
              </div>
              <p class="text-base-content/60">Dieser Benutzer hat noch keine Adressen hinterlegt.</p>
            </div>
          ) : (
            <div class="space-y-4">
              {userAddresses.map((address) => (
                <div class="border border-base-300 rounded-lg p-4 hover:border-primary/50 transition-colors">
                  <div class="flex items-start justify-between gap-4">
                    <div class="flex-1">
                      <div class="flex items-center gap-2 mb-2">
                        <h4 class="font-semibold text-base-content">
                          {address.firstName} {address.lastName}
                        </h4>
                        {address.isDefault && (
                          <span class="badge badge-primary badge-sm">Standard</span>
                        )}
                        <span class="badge badge-ghost badge-sm">
                          {address.addressType === 'shipping' && 'Lieferung'}
                          {address.addressType === 'billing' && 'Rechnung'}
                          {address.addressType === 'both' && 'Lieferung & Rechnung'}
                        </span>
                      </div>
                      {address.company && (
                        <p class="text-sm text-base-content/80 mb-1">{address.company}</p>
                      )}
                      <p class="text-sm text-base-content/80">{address.addressLine1}</p>
                      {address.addressLine2 && (
                        <p class="text-sm text-base-content/80">{address.addressLine2}</p>
                      )}
                      <p class="text-sm text-base-content/80">
                        {address.postalCode} {address.city}
                        {address.stateProvince && `, ${address.stateProvince}`}
                      </p>
                      <p class="text-sm text-base-content/80">{address.country}</p>
                      {address.phone && (
                        <p class="text-sm text-base-content/60 mt-1">Tel: {address.phone}</p>
                      )}
                      <p class="text-xs text-base-content/40 mt-2">
                        Erstellt: {formatDate(address.createdAt)}
                      </p>
                    </div>
                    <div class="flex gap-2">
                      <button
                        onclick={`editAddress(${JSON.stringify(address).replace(/"/g, '&quot;')})`}
                        class="btn btn-ghost btn-sm"
                        title="Bearbeiten"
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                          <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                        </svg>
                      </button>
                      <button
                        onclick={`deleteAddress('${address.id}', '${address.firstName} ${address.lastName}')`}
                        class="btn btn-ghost btn-sm text-error"
                        title="Löschen"
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                          <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                        </svg>
                      </button>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          )}
        </div>
      </div>
    </div>
  </div>

  <!-- Add Address Modal -->
  <dialog id="add-address-modal" class="modal">
    <div class="modal-box max-w-2xl">
      <form method="dialog">
        <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">✕</button>
      </form>
      <h3 class="font-bold text-lg mb-4">Neue Adresse für {user.name} hinzufügen</h3>
      <form id="add-address-form" class="space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="form-control">
            <label class="label"><span class="label-text">Vorname *</span></label>
            <input type="text" name="firstName" class="input input-bordered" required />
          </div>
          <div class="form-control">
            <label class="label"><span class="label-text">Nachname *</span></label>
            <input type="text" name="lastName" class="input input-bordered" required />
          </div>
          <div class="form-control md:col-span-2">
            <label class="label"><span class="label-text">Firma (optional)</span></label>
            <input type="text" name="company" class="input input-bordered" />
          </div>
          <div class="form-control md:col-span-2">
            <label class="label"><span class="label-text">Straße und Hausnummer *</span></label>
            <input type="text" name="addressLine1" class="input input-bordered" required />
          </div>
          <div class="form-control md:col-span-2">
            <label class="label"><span class="label-text">Adresszusatz (optional)</span></label>
            <input type="text" name="addressLine2" class="input input-bordered" />
          </div>
          <div class="form-control">
            <label class="label"><span class="label-text">PLZ *</span></label>
            <input type="text" name="postalCode" class="input input-bordered" required />
          </div>
          <div class="form-control">
            <label class="label"><span class="label-text">Stadt *</span></label>
            <input type="text" name="city" class="input input-bordered" required />
          </div>
          <div class="form-control">
            <label class="label"><span class="label-text">Bundesland (optional)</span></label>
            <input type="text" name="stateProvince" class="input input-bordered" />
          </div>
          <div class="form-control">
            <label class="label"><span class="label-text">Land *</span></label>
            <select name="country" class="select select-bordered" required>
              <option value="DE">Deutschland</option>
              <option value="AT">Österreich</option>
              <option value="CH">Schweiz</option>
            </select>
          </div>
          <div class="form-control md:col-span-2">
            <label class="label"><span class="label-text">Telefon (optional)</span></label>
            <input type="tel" name="phone" class="input input-bordered" />
          </div>
        </div>
        <div class="form-control">
          <label class="label cursor-pointer justify-start gap-3">
            <input type="checkbox" name="isDefault" class="checkbox" />
            <span class="label-text">Als Standardadresse festlegen</span>
          </label>
        </div>
        <div class="modal-action">
          <button type="button" class="btn" onclick="document.getElementById('add-address-modal').close()">Abbrechen</button>
          <button type="submit" class="btn btn-primary">Hinzufügen</button>
        </div>
      </form>
    </div>
  </dialog>

  <!-- Edit Address Modal -->
  <dialog id="edit-address-modal" class="modal">
    <div class="modal-box max-w-2xl">
      <form method="dialog">
        <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">✕</button>
      </form>
      <h3 class="font-bold text-lg mb-4">Adresse bearbeiten</h3>
      <form id="edit-address-form" class="space-y-4">
        <input type="hidden" name="id" />
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="form-control">
            <label class="label"><span class="label-text">Vorname *</span></label>
            <input type="text" name="firstName" class="input input-bordered" required />
          </div>
          <div class="form-control">
            <label class="label"><span class="label-text">Nachname *</span></label>
            <input type="text" name="lastName" class="input input-bordered" required />
          </div>
          <div class="form-control md:col-span-2">
            <label class="label"><span class="label-text">Firma (optional)</span></label>
            <input type="text" name="company" class="input input-bordered" />
          </div>
          <div class="form-control md:col-span-2">
            <label class="label"><span class="label-text">Straße und Hausnummer *</span></label>
            <input type="text" name="addressLine1" class="input input-bordered" required />
          </div>
          <div class="form-control md:col-span-2">
            <label class="label"><span class="label-text">Adresszusatz (optional)</span></label>
            <input type="text" name="addressLine2" class="input input-bordered" />
          </div>
          <div class="form-control">
            <label class="label"><span class="label-text">PLZ *</span></label>
            <input type="text" name="postalCode" class="input input-bordered" required />
          </div>
          <div class="form-control">
            <label class="label"><span class="label-text">Stadt *</span></label>
            <input type="text" name="city" class="input input-bordered" required />
          </div>
          <div class="form-control">
            <label class="label"><span class="label-text">Bundesland (optional)</span></label>
            <input type="text" name="stateProvince" class="input input-bordered" />
          </div>
          <div class="form-control">
            <label class="label"><span class="label-text">Land *</span></label>
            <select name="country" class="select select-bordered" required>
              <option value="DE">Deutschland</option>
              <option value="AT">Österreich</option>
              <option value="CH">Schweiz</option>
            </select>
          </div>
          <div class="form-control md:col-span-2">
            <label class="label"><span class="label-text">Telefon (optional)</span></label>
            <input type="tel" name="phone" class="input input-bordered" />
          </div>
        </div>
        <div class="form-control">
          <label class="label cursor-pointer justify-start gap-3">
            <input type="checkbox" name="isDefault" class="checkbox" />
            <span class="label-text">Als Standardadresse festlegen</span>
          </label>
        </div>
        <div class="modal-action">
          <button type="button" class="btn" onclick="document.getElementById('edit-address-modal').close()">Abbrechen</button>
          <button type="submit" class="btn btn-primary">Speichern</button>
        </div>
      </form>
    </div>
  </dialog>
</AdminLayout>

<script define:vars={{ userId: user.id }}>
  // Address management functions
  const addAddressForm = document.getElementById('add-address-form');
  const editAddressForm = document.getElementById('edit-address-form');

  // Add new address
  addAddressForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(addAddressForm);

    const data = {
      userId: userId,
      firstName: formData.get('firstName'),
      lastName: formData.get('lastName'),
      company: formData.get('company'),
      addressLine1: formData.get('addressLine1'),
      addressLine2: formData.get('addressLine2'),
      postalCode: formData.get('postalCode'),
      city: formData.get('city'),
      stateProvince: formData.get('stateProvince'),
      country: formData.get('country'),
      phone: formData.get('phone'),
      isDefault: formData.get('isDefault') === 'on',
      addressType: 'both',
    };

    try {
      const response = await fetch('/api/admin/addresses/create', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      const result = await response.json();

      if (result.success) {
        document.getElementById('add-address-modal').close();
        window.location.reload();
      } else {
        alert('Fehler beim Hinzufügen der Adresse: ' + result.error.message);
      }
    } catch (error) {
      console.error('Error adding address:', error);
      alert('Fehler beim Hinzufügen der Adresse');
    }
  });

  // Edit address
  window.editAddress = (address) => {
    const form = document.getElementById('edit-address-form');
    form.querySelector('[name="id"]').value = address.id;
    form.querySelector('[name="firstName"]').value = address.firstName;
    form.querySelector('[name="lastName"]').value = address.lastName;
    form.querySelector('[name="company"]').value = address.company || '';
    form.querySelector('[name="addressLine1"]').value = address.addressLine1;
    form.querySelector('[name="addressLine2"]').value = address.addressLine2 || '';
    form.querySelector('[name="postalCode"]').value = address.postalCode;
    form.querySelector('[name="city"]').value = address.city;
    form.querySelector('[name="stateProvince"]').value = address.stateProvince || '';
    form.querySelector('[name="country"]').value = address.country;
    form.querySelector('[name="phone"]').value = address.phone || '';
    form.querySelector('[name="isDefault"]').checked = address.isDefault;

    document.getElementById('edit-address-modal').showModal();
  };

  // Update address
  editAddressForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(editAddressForm);

    const data = {
      id: formData.get('id'),
      firstName: formData.get('firstName'),
      lastName: formData.get('lastName'),
      company: formData.get('company'),
      addressLine1: formData.get('addressLine1'),
      addressLine2: formData.get('addressLine2'),
      postalCode: formData.get('postalCode'),
      city: formData.get('city'),
      stateProvince: formData.get('stateProvince'),
      country: formData.get('country'),
      phone: formData.get('phone'),
      isDefault: formData.get('isDefault') === 'on',
      addressType: 'both',
    };

    try {
      const response = await fetch('/api/admin/addresses/update', {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      const result = await response.json();

      if (result.success) {
        document.getElementById('edit-address-modal').close();
        window.location.reload();
      } else {
        alert('Fehler beim Aktualisieren der Adresse: ' + result.error.message);
      }
    } catch (error) {
      console.error('Error updating address:', error);
      alert('Fehler beim Aktualisieren der Adresse');
    }
  });

  // Delete address
  window.deleteAddress = async (id, name) => {
    if (!confirm(`Möchten Sie die Adresse von ${name} wirklich löschen?`)) {
      return;
    }

    try {
      const response = await fetch('/api/admin/addresses/delete', {
        method: 'DELETE',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id }),
      });

      const result = await response.json();

      if (result.success) {
        window.location.reload();
      } else {
        alert('Fehler beim Löschen der Adresse: ' + result.error.message);
      }
    } catch (error) {
      console.error('Error deleting address:', error);
      alert('Fehler beim Löschen der Adresse');
    }
  };
</script>
