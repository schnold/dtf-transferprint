				const slides = trackEl.querySelectorAll('.review-carousel-slide');
				const dots = document.querySelectorAll('.review-carousel-dot');
				const prevBtn = document.querySelector('.review-carousel-prev');
				const nextBtn = document.querySelector('.review-carousel-next');
				const total = slides.length;
				if (total === 0) return;

				let current = 0;
				const AUTOPLAY_MS = 6000;

				function goTo(index: number) {
					current = (index + total) % total;
					const offset = -current * (100 / total);
					(trackEl as HTMLElement).style.transform = `translateX(${offset}%)`;
					dots.forEach((d, i) => d.setAttribute('aria-selected', i === current ? 'true' : 'false'));
				}

				function next() { goTo(current + 1); }
				function prev() { goTo(current - 1); }

				dots.forEach((d, i) => d.addEventListener('click', () => goTo(i)));
				if (prevBtn) prevBtn.addEventListener('click', prev);
				if (nextBtn) nextBtn.addEventListener('click', next);

				let autoplay = setInterval(next, AUTOPLAY_MS);
				document.addEventListener('visibilitychange', () => { if (document.hidden) clearInterval(autoplay); });
			})();
		</script>
