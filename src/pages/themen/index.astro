---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import ContactCTASection from '../../components/ContactCTASection.astro';

const title = 'Themen – Textilthemen, Sportbekleidung & Arbeitskleidung';
const description = 'Übersicht unserer Themen: T-Shirts bedrucken, Schürzen besticken, Sportbekleidung bedrucken, Arbeitskleidung und mehr. Professionelle Textilveredelung für jeden Anlass.';

const textilthemen = [
	{ title: 'T-Shirts bedrucken', href: '/themen/t-shirts-bedrucken/' },
	{ title: 'Schürzen besticken', href: '/themen/schuerzen-besticken/' },
	{ title: 'Kappen veredeln', href: '/themen/kappen-veredeln/' },
	{ title: 'Baumwolltaschen bedrucken', href: '/themen/baumwolltaschen-bedrucken/' },
	{ title: 'Mützen besticken', href: '/themen/muetzen-besticken/' },
	{ title: 'Softshelljacken besticken', href: '/themen/softshelljacken-besticken/' },
	{ title: 'Schal besticken', href: '/themen/schal-besticken/' },
	{ title: 'Handtücher besticken', href: '/themen/handtuecher-besticken/' },
	{ title: 'Bandshirts drucken', href: '/themen/bandshirts-drucken/' },
	{ title: 'Fanwear SV Darmstadt 98', href: '/themen/fanwear-sv-darmstadt-98/' },
	{ title: 'Modelabel gründen', href: '/themen/modelabel-gruenden/' },
];

const sportbekleidung = [
	{ title: 'Laufshirts bedrucken', href: '/themen/sportbekleidung-bedrucken/laufshirts-bedrucken/' },
	{ title: 'Laufshirts komplett bedrucken', href: '/themen/sportbekleidung-bedrucken/laufshirts-komplett-bedrucken/' },
	{ title: 'Trikots bedrucken', href: '/themen/sportbekleidung-bedrucken/trikots-bedrucken/' },
	{ title: 'Fahrradtrikot Bedrucken', href: '/themen/sportbekleidung-bedrucken/fahrradtrikot-bedrucken/' },
	{ title: 'Poloshirts komplett bedrucken', href: '/themen/sportbekleidung-bedrucken/poloshirts-komplett-bedrucken/' },
	{ title: 'eSport Teamware', href: '/themen/sportbekleidung-bedrucken/esport-teamware/' },
	{ title: 'Eishockey Shirts', href: '/themen/sportbekleidung-bedrucken/eishockey-shirts/' },
	{ title: 'Hoodies komplett bedruckt', href: '/themen/sportbekleidung-bedrucken/hoodies-komplett-bedruckt/' },
	{ title: 'Trainingsjacken komplett bedruckt', href: '/themen/sportbekleidung-bedrucken/trainingsjacken-komplett-bedruckt/' },
	{ title: 'Business Runs & Firmenläufe', href: '/themen/sportbekleidung-bedrucken/business-runs-firmenlauf/' },
	{ title: 'Rucksackbeutel komplett bedruckt', href: '/themen/sportbekleidung-bedrucken/rucksackbeutel-komplett-bedruckt/' },
];

const arbeitskleidung = [
	{ title: 'Kasacks / Medizinische Berufsbekleidung', href: '/arbeitskleidung/kasacks-besticken-medizin-bekleidung/' },
];

const placeholderImage = '/images/themen/placeholder.webp';
---

<Layout title={title} description={description}>
	<Navbar />

	<section class="relative bg-gradient-to-br from-base-200 via-base-100 to-base-200 pt-32 pb-20">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
			<nav class="mb-8 flex items-center gap-2 text-sm text-neutral/60">
				<a href="/" class="hover:text-primary transition-colors">Startseite</a>
				<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
				</svg>
				<span class="text-neutral font-medium">Themen</span>
			</nav>

			<div class="text-center max-w-4xl mx-auto">
				<h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-neutral mb-6 leading-tight">
					Themen – Textilveredelung nach Anwendung
				</h1>
				<p class="text-lg sm:text-xl text-neutral/70 mb-8 leading-relaxed">
					Ob T-Shirts, Sportbekleidung oder Arbeitskleidung: Hier finden Sie unsere Themen nach Textilart und Einsatzgebiet. Wählen Sie Ihr Thema für Details, Beispiele und Angebote.
				</p>

				<div class="stats stats-vertical lg:stats-horizontal shadow my-8 w-full">
					<div class="stat">
						<div class="stat-figure text-primary">
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
							</svg>
						</div>
						<div class="stat-title">Textilthemen</div>
						<div class="stat-value text-primary">11</div>
						<div class="stat-desc">Von T-Shirts bis Modelabel</div>
					</div>
					<div class="stat">
						<div class="stat-figure text-secondary">
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
							</svg>
						</div>
						<div class="stat-title">Sportbekleidung</div>
						<div class="stat-value text-secondary">11</div>
						<div class="stat-desc">Trikots, Laufshirts & mehr</div>
					</div>
					<div class="stat">
						<div class="stat-figure text-[#16a34a]">
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
							</svg>
						</div>
						<div class="stat-title">Arbeitskleidung</div>
						<div class="stat-value text-[#16a34a]">1</div>
						<div class="stat-desc">Medizin & Beruf</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Beispiele aus unserer Produktion -->
	<section class="py-16 bg-base-100">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
			<h2 class="text-3xl font-bold text-neutral mb-2">Beispiele aus unserer Produktion</h2>
			<p class="text-neutral/70 mb-8">
				Einblicke in unsere Textilveredelung – Platzhalter für Ihre Fotos. Ersetzen Sie die Bilder in <code class="text-sm bg-base-200 px-1 rounded">/public/images/themen/</code> durch eigene Aufnahmen.
			</p>
			<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
				<figure class="rounded-2xl overflow-hidden shadow-lg border border-base-300/30">
					<img src={placeholderImage} alt="Themen – Platzhalter Bild 1 (später durch Foto ersetzen)" class="w-full aspect-[4/3] object-cover" width="400" height="300" loading="lazy" />
					<figcaption class="p-4 bg-base-200 text-sm text-neutral/80">Platzhalter – Bild 1</figcaption>
				</figure>
				<figure class="rounded-2xl overflow-hidden shadow-lg border border-base-300/30">
					<img src={placeholderImage} alt="Themen – Platzhalter Bild 2 (später durch Foto ersetzen)" class="w-full aspect-[4/3] object-cover" width="400" height="300" loading="lazy" />
					<figcaption class="p-4 bg-base-200 text-sm text-neutral/80">Platzhalter – Bild 2</figcaption>
				</figure>
				<figure class="rounded-2xl overflow-hidden shadow-lg border border-base-300/30">
					<img src={placeholderImage} alt="Themen – Platzhalter Bild 3 (später durch Foto ersetzen)" class="w-full aspect-[4/3] object-cover" width="400" height="300" loading="lazy" />
					<figcaption class="p-4 bg-base-200 text-sm text-neutral/80">Platzhalter – Bild 3</figcaption>
				</figure>
				<figure class="rounded-2xl overflow-hidden shadow-lg border border-base-300/30">
					<img src={placeholderImage} alt="Themen – Platzhalter Bild 4 (später durch Foto ersetzen)" class="w-full aspect-[4/3] object-cover" width="400" height="300" loading="lazy" />
					<figcaption class="p-4 bg-base-200 text-sm text-neutral/80">Platzhalter – Bild 4</figcaption>
				</figure>
			</div>
		</div>
	</section>

	<!-- Themen nach Kategorie -->
	<section class="py-16 bg-base-200">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
			<h2 class="text-3xl font-bold text-neutral mb-2">Themen nach Kategorie</h2>
			<p class="text-neutral/70 mb-10">
				Wählen Sie eine Kategorie und dann das passende Thema für Details und ein unverbindliches Angebot.
			</p>

			<div class="grid grid-cols-1 lg:grid-cols-3 gap-10">
				<div class="card bg-base-100 border border-base-300/30 shadow-lg overflow-hidden">
					<figure class="aspect-[4/3] overflow-hidden">
						<img src={placeholderImage} alt="Textilthemen – Platzhalter (später durch Foto ersetzen)" class="w-full h-full object-cover" width="400" height="300" loading="lazy" />
					</figure>
					<div class="card-body">
						<h3 class="card-title text-xl font-bold text-neutral">Textilthemen</h3>
						<ul class="space-y-2 mt-2">
							{textilthemen.map((item) => (
								<li>
									<a href={item.href} class="text-neutral/80 hover:text-primary transition-colors block py-1">
										{item.title}
									</a>
								</li>
							))}
						</ul>
					</div>
				</div>

				<div class="card bg-base-100 border border-base-300/30 shadow-lg overflow-hidden">
					<figure class="aspect-[4/3] overflow-hidden">
						<img src={placeholderImage} alt="Sportbekleidung – Platzhalter (später durch Foto ersetzen)" class="w-full h-full object-cover" width="400" height="300" loading="lazy" />
					</figure>
					<div class="card-body">
						<h3 class="card-title text-xl font-bold text-neutral">Sportbekleidung</h3>
						<ul class="space-y-2 mt-2">
							{sportbekleidung.map((item) => (
								<li>
									<a href={item.href} class="text-neutral/80 hover:text-primary transition-colors block py-1">
										{item.title}
									</a>
								</li>
							))}
						</ul>
					</div>
				</div>

				<div class="card bg-base-100 border border-base-300/30 shadow-lg overflow-hidden">
					<figure class="aspect-[4/3] overflow-hidden">
						<img src={placeholderImage} alt="Arbeitskleidung – Platzhalter (später durch Foto ersetzen)" class="w-full h-full object-cover" width="400" height="300" loading="lazy" />
					</figure>
					<div class="card-body">
						<h3 class="card-title text-xl font-bold text-neutral">Arbeitskleidung</h3>
						<ul class="space-y-2 mt-2">
							{arbeitskleidung.map((item) => (
								<li>
									<a href={item.href} class="text-neutral/80 hover:text-primary transition-colors block py-1">
										{item.title}
									</a>
								</li>
							))}
						</ul>
					</div>
				</div>
			</div>
		</div>
	</section>

	<ContactCTASection
		title="Passendes Thema nicht dabei?"
		description="Wir beraten Sie gerne zu allen Textilarten und Veredelungsverfahren. Fordern Sie ein unverbindliches Angebot an."
	/>
</Layout>
