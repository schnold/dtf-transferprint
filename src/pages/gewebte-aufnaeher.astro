import ProsConsSection from '../components/ProsConsSection.astro';

const title = 'Gewebte Aufnäher – Individuelle Patches für jeden Anlass | BySelini';
const description = 'Gewebte Aufnäher (Patches, Embleme, Badges) in Premium-Qualität ✓ Feine Optik & weiche Haptik ✓ Ab 100 Stück ✓ Detaillierte Motive ab 2mm ✓ Vielseitig einsetzbar ✓ Wasch- & lichtbeständig ➤ Jetzt Angebot anfordern!';
---

<CompanyLayout title={title} description={description}>
	<!-- Hero Section -->
	<div class="mb-12">
		<h1 class="!mb-4">Gewebte Aufnäher – Individuelle Patches für jeden Anlass</h1>
		<p class="text-lg text-neutral/80 !mb-6">
			Gewebte Aufnäher, auch bekannt als Patches, Abzeichen, Embleme oder Badges, überzeugen durch ihre feine Optik und weiche Haptik. Bei der Herstellung werden feine Garne mit einem maschinellen Webstuhl zu einer homogenen Fläche verwoben – so lassen sich detaillierte Motive und Schriften ab 2 mm Höhe präzise umsetzen.
		</p>

		<div class="alert alert-success mb-8">
			<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
			</svg>
			<div>
				<h3 class="font-bold flex items-center gap-2">
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 shrink-0">
