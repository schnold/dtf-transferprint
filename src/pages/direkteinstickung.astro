---
import CompanyLayout from "../layouts/CompanyLayout.astro";
import InquiryForm from "../components/InquiryForm.astro";
import UseCasesSection from "../components/UseCasesSection.astro";
import ContactCTASection from "../components/ContactCTASection.astro";
import TechniqueMaterialsSection from "../components/TechniqueMaterialsSection.astro";
import TechniqueCard from "../components/TechniqueCard.astro";
import ProsConsSection from "../components/ProsConsSection.astro";
import StepListSection from "../components/StepListSection.astro";
import StepCard from "../components/StepCard.astro";
---

<CompanyLayout
	title="Direkteinstickung – Präzision für Ihre Textilien | Selini-Shirt"
	description="Hochwertige Direkteinstickung auf Textilien. Professionelle Stickerei mit Präzision und langer Haltbarkeit. Ideal für Firmenlogos, Vereine und individuelle Designs."
>
	<!-- Hero Section -->
	<div class="mb-12">
		<h1 class="!mb-4">Direkteinstickung – Präzision für Ihre Textilien</h1>
		<p class="text-lg text-neutral/80 !mb-6">
			Die edelste Art, Textilien zu veredeln. Hochwertige Stickereien mit professioneller Präzision und langer Haltbarkeit für Firmen, Vereine und individuelle Projekte.
		</p>
	</div>

	<!-- Quick Stats -->
	<div class="stats stats-vertical lg:stats-horizontal shadow my-8 w-full">
		<div class="stat">
			<div class="stat-figure text-primary">
				<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
					<path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25" />
				</svg>
			</div>
			<div class="stat-title">Schrifthöhe</div>
			<div class="stat-value text-primary">Ab 5 mm</div>
			<div class="stat-desc">Mindestgröße möglich</div>
		</div>

		<div class="stat">
			<div class="stat-figure text-secondary">
				<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
					<path stroke-linecap="round" stroke-linejoin="round" d="M4.098 19.902a3.75 3.75 0 005.304 0l6.401-6.402M6.75 21A3.75 3.75 0 013 17.25V4.125C3 3.504 3.504 3 4.125 3h5.25c.621 0 1.125.504 1.125 1.125v4.072M6.75 21a3.75 3.75 0 003.75-3.75V8.197M6.75 21h13.125c.621 0 1.125-.504 1.125-1.125v-5.25c0-.621-.504-1.125-1.125-1.125h-4.072M10.5 8.197l2.88-2.88c.438-.439 1.15-.439 1.59 0l3.712 3.713c.44.44.44 1.152 0 1.59l-2.879 2.88M6.75 17.25h.008v.008H6.75v-.008z" />
				</svg>
			</div>
			<div class="stat-title">Farbgenauigkeit</div>
			<div class="stat-value text-secondary">Pantone</div>
			<div class="stat-desc">Exakte Farbabstimmung</div>
		</div>

		<div class="stat">
			<div class="stat-figure text-[#16a34a]">
				<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
					<path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
				</svg>
			</div>
			<div class="stat-title">Haltbarkeit</div>
			<div class="stat-value text-[#16a34a]">Langlebig</div>
			<div class="stat-desc">Auch nach vielen Wäschen</div>
		</div>
	</div>

	<!-- Video & Werkstatt-Einblick (oben) -->
	<section class="mb-16" aria-labelledby="stickerei-video">
		<h2 id="stickerei-video">Stickerei in Aktion</h2>
		<p class="text-neutral/70 mb-6">
			Einblick in unsere Werkstatt und die industrielle Stickerei.
		</p>
		<div class="rounded-2xl overflow-hidden shadow-xl border border-base-300/30 bg-base-300 ring-1 ring-black/5 transition-shadow hover:shadow-2xl mb-8">
			<video
				class="w-full aspect-video object-cover"
				controls
				muted
				loop
				playsinline
				preload="metadata"
				title="Industrielle Stickerei – Selini-Shirt"
			>
				<source src="/videos/stickerei/5192380_Industrial_Sewing_1280x720.mp4" type="video/mp4" />
				Ihr Browser unterstützt keine Video-Wiedergabe.
			</video>
			<p class="p-4 bg-base-200/80 text-sm text-neutral/80 font-medium">Industrielle Stickerei in Aktion</p>
		</div>
		<div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
			<figure class="group rounded-2xl overflow-hidden shadow-lg border border-base-300/30 bg-base-200/50 transition-all duration-300 hover:shadow-xl hover:border-primary/20 hover:-translate-y-0.5">
				<div class="aspect-[4/3] overflow-hidden">
					<img
						src="/images/dienstleistungen/stickerei/selini-shirt%20print%20raum%20mit%20maschinen.webp"
						alt="Selini-Shirt – Print-Raum mit Stickmaschinen"
						class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
						width="400"
						height="300"
						loading="lazy"
					/>
				</div>
				<figcaption class="p-4 text-sm text-neutral/80">Print-Raum mit Stickmaschinen</figcaption>
			</figure>
			<figure class="group rounded-2xl overflow-hidden shadow-lg border border-base-300/30 bg-base-200/50 transition-all duration-300 hover:shadow-xl hover:border-primary/20 hover:-translate-y-0.5">
				<div class="aspect-[4/3] overflow-hidden">
					<img
						src="/images/dienstleistungen/stickerei/selini-shirt-farbig-beispielstickung.webp"
						alt="Selini-Shirt farbige Beispielstickung"
						class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
						width="400"
						height="300"
						loading="lazy"
					/>
				</div>
				<figcaption class="p-4 text-sm text-neutral/80">Farbige Beispielstickung</figcaption>
			</figure>
		</div>
	</section>

	<h2>Was ist Direkteinstickung?</h2>
	<p>
		Die <strong>Direkteinstickung</strong> ist die edelste Art, Textilien zu veredeln. Jedes Motiv wird zunächst mit einem Stickprogramm vorbereitet.
	</p>
	<p>
		Dabei wird die digitale Vorlage in eine <strong>stickbare Datei umgewandelt</strong>, die von unseren Stickexperten sorgfältig überprüft und optimiert wird.
	</p>
	<p>
		Nur so entstehen hochwertige Stickereien, die <strong>präzise, langlebig und professionell</strong> wirken.
	</p>

	<figure class="my-10 rounded-2xl overflow-hidden shadow-lg border border-base-300/30 max-w-xl mx-auto sm:mx-0 sm:float-right sm:ml-8 sm:mb-6">
		<img
			src="/images/dienstleistungen/stickerei/166.webp"
			alt="Stickerei-Beispiel aus der Produktion"
			class="w-full aspect-[4/3] object-cover"
			width="400"
			height="300"
			loading="lazy"
		/>
		<figcaption class="p-4 bg-base-200/80 text-sm text-neutral/80">Stickerei aus unserer Produktion</figcaption>
	</figure>
	<div class="clear-both"></div>

	<StepListSection
		title="So entsteht Ihr Stickmotiv"
		subtitle="Von der digitalen Vorlage zur perfekten Stickerei"
	>
		<StepCard number={1} title="Vorlage & Dateivorbereitung">
			<p class="text-neutral/80 mb-3">
				Für ein perfektes Ergebnis ist die Qualität der Vorlage entscheidend. Dateien sollten <strong>mindestens 300 dpi</strong> haben.
			</p>
			<p class="text-neutral/80">
				Sehr kleine Details oder Farbverläufe müssen gegebenenfalls vereinfacht werden, um eine optimale Stickqualität zu gewährleisten.
			</p>
		</StepCard>
		<StepCard number={2} title="Punchen & Programmierung">
			<p class="text-neutral/80 mb-3">
				Die digitale Vorlage wird in eine stickbare Datei umgewandelt. Während des <strong>Punchens</strong> werden Stiche einzeln überprüft, um sicherzustellen, dass das Design später auch auf dem Stoff exakt umgesetzt wird.
			</p>
			<div class="bg-info/10 border border-info/20 rounded-lg p-4">
				<p class="text-sm text-neutral/80 mb-2">
					<strong>Wichtig:</strong> Die Anzahl der Stiche beeinflusst den Preis.
				</p>
				<p class="text-sm text-neutral/80">
					Ein einmal erstelltes Stickprogramm kann für <strong>Folgeaufträge ohne zusätzliche Kosten</strong> genutzt werden. Sollte das Motiv in einer neuen Größe benötigt werden, wird ein angepasstes Programm erstellt, damit Form und Proportionen erhalten bleiben.
				</p>
			</div>
		</StepCard>
		<StepCard number={3} title="Material & Stoffauswahl">
			<p class="text-neutral/80 mb-4">
				Die Materialbeschaffenheit spielt eine große Rolle. Flexible Stoffe wie <strong>T-Shirts oder Poloshirts</strong> verhalten sich anders als feste Gewebe wie <strong>Schürzen oder Jacken</strong>.
			</p>
			<p class="text-neutral/80">
				Um Verzerrungen zu vermeiden, passen unsere Experten Buchstaben und Formen an. So bleibt das Stickbild klar, symmetrisch und ästhetisch.
			</p>
		</StepCard>
		<StepCard number={4} title="Stickvorgang & Verarbeitung">
			<p class="text-neutral/80 mb-3">
				Nur mit <strong>industriellen Stickmaschinen</strong> und hochwertigen Materialien lassen sich hochwertige Stickereien herstellen.
			</p>
			<p class="text-neutral/80">
				Die richtige Ober- und Unterfadenspannung, passende Nadeln und fein abgestimmte Garne sorgen dafür, dass auch kleinste Details und <strong>Schriftzüge ab 5 mm Höhe</strong> präzise umgesetzt werden.
			</p>
		</StepCard>
		<StepCard number={5} title="Qualitätskontrolle & Fertigstellung">
			<p class="text-neutral/80 mb-3">
				Während des Stickens überwachen wir den Prozess kontinuierlich. Nach Abschluss wird jede Stickerei geprüft.
			</p>
			<p class="text-neutral/80">
				Überstehende Fäden werden entfernt, kleine Schlaufen beseitigt und Vliesreste sorgfältig entfernt. So garantieren wir eine <strong>perfekte Optik und lange Haltbarkeit</strong>, auch nach vielen Waschgängen.
			</p>
		</StepCard>
	</StepListSection>

	<!-- Beispiele aus der Produktion -->
	<div class="my-12">
		<div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
			<figure class="group rounded-2xl overflow-hidden shadow-lg border border-base-300/30 bg-base-200/50 transition-all duration-300 hover:shadow-xl hover:border-primary/20 hover:-translate-y-0.5">
				<div class="aspect-[4/3] overflow-hidden">
					<img
						src="/images/dienstleistungen/stickerei/4404.webp"
						alt="Stickerei-Motiv auf Textil"
						class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
						width="400"
						height="300"
						loading="lazy"
					/>
				</div>
				<figcaption class="p-4 text-sm text-neutral/80">Stickerei-Motiv auf Textil</figcaption>
			</figure>
			<figure class="group rounded-2xl overflow-hidden shadow-lg border border-base-300/30 bg-base-200/50 transition-all duration-300 hover:shadow-xl hover:border-primary/20 hover:-translate-y-0.5">
				<div class="aspect-[4/3] overflow-hidden">
					<img
						src="/images/dienstleistungen/stickerei/5352.webp"
						alt="Direkteinstickung Detail"
						class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
						width="400"
						height="300"
						loading="lazy"
					/>
				</div>
				<figcaption class="p-4 text-sm text-neutral/80">Direkteinstickung im Detail</figcaption>
			</figure>
		</div>
	</div>

	<TechniqueMaterialsSection
		title="Sticharten & Materialien"
		subtitle="Professionelle Technik für perfekte Ergebnisse"
	>
		<div class="grid md:grid-cols-2 gap-8 mb-8">
			<TechniqueCard title="Sticharten">
				<svg slot="icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-base-content">
					<path stroke-linecap="round" stroke-linejoin="round" d="M9.53 16.122a3 3 0 00-5.78 1.128 2.25 2.25 0 01-2.4 2.245 4.5 4.5 0 008.4-2.245c0-.399-.078-.78-.22-1.128zm0 0a15.998 15.998 0 003.388-1.62m-5.043-.025a15.994 15.994 0 011.622-3.395m3.42 3.42a15.995 15.995 0 004.764-4.648l3.876-5.814a1.151 1.151 0 00-1.597-1.597L14.146 6.32a15.996 15.996 0 00-4.649 4.763m3.42 3.42a6.776 6.776 0 00-3.42-3.42" />
				</svg>
				<div class="space-y-4">
					<div>
						<h4 class="font-semibold text-neutral mb-2">Deckstiche</h4>
						<ul class="text-sm text-neutral/70 space-y-1 pl-4">
							<li>• Steppstich</li>
							<li>• Doppelsteppstich</li>
							<li>• Plattstich</li>
							<li>• Füllstich</li>
						</ul>
					</div>
					<div>
						<h4 class="font-semibold text-neutral mb-2">Unterlegstiche</h4>
						<ul class="text-sm text-neutral/70 space-y-1 pl-4">
							<li>• Steppstich</li>
							<li>• Zickzack</li>
							<li>• Doppelzickzack</li>
							<li>• Reihstiche</li>
							<li>• Kreuzstiche</li>
						</ul>
					</div>
				</div>
			</TechniqueCard>
			<TechniqueCard title="Stickvliese">
				<svg slot="icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-base-content">
					<path stroke-linecap="round" stroke-linejoin="round" d="M6.429 9.75L2.25 12l4.179 2.25m0-4.5l5.571 3 5.571-3m-11.142 0L2.25 7.5 12 2.25l9.75 5.25-4.179 2.25m0 0L21.75 12l-4.179 2.25m0 0l4.179 2.25L12 21.75 2.25 16.5l4.179-2.25m11.142 0l-5.571 3-5.571-3" />
				</svg>
				<p class="text-neutral/70 text-sm mb-4">
					Stickvliese sorgen für Stabilität während des Stickvorgangs:
				</p>
				<ul class="list-none pl-0 text-sm text-neutral/70 space-y-2">
					<li class="flex gap-2">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 text-primary flex-shrink-0 mt-0.5">
							<path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
						</svg>
						<span>Schneidevlies</span>
					</li>
					<li class="flex gap-2">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 text-primary flex-shrink-0 mt-0.5">
							<path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
						</svg>
						<span>Reißvlies</span>
					</li>
					<li class="flex gap-2">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 text-primary flex-shrink-0 mt-0.5">
							<path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
						</svg>
						<span>Selbstklebendes Vlies</span>
					</li>
					<li class="flex gap-2">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 text-primary flex-shrink-0 mt-0.5">
							<path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
						</svg>
						<span>Wasserlösliches Vlies</span>
					</li>
				</ul>
				<div class="mt-4 p-3 bg-base-100 rounded-lg">
					<p class="text-xs text-neutral/70">
						<strong>Hinweis:</strong> Leichte Stoffe benötigen zusätzliche Unterstützung, schwere Stoffe weniger.
					</p>
				</div>
			</TechniqueCard>
		</div>
		<div class="grid md:grid-cols-2 gap-8 mt-8">
			<TechniqueCard title="Farbgenauigkeit">
				<svg slot="icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-base-content">
					<path stroke-linecap="round" stroke-linejoin="round" d="M4.098 19.902a3.75 3.75 0 005.304 0l6.401-6.402M6.75 21A3.75 3.75 0 013 17.25V4.125C3 3.504 3.504 3 4.125 3h5.25c.621 0 1.125.504 1.125 1.125v4.072M6.75 21a3.75 3.75 0 003.75-3.75V8.197M6.75 21h13.125c.621 0 1.125-.504 1.125-1.125v-5.25c0-.621-.504-1.125-1.125-1.125h-4.072M10.5 8.197l2.88-2.88c.438-.439 1.15-.439 1.59 0l3.712 3.713c.44.44.44 1.152 0 1.59l-2.879 2.88M6.75 17.25h.008v.008H6.75v-.008z" />
				</svg>
				<p class="text-neutral/70 text-sm">
					Eine breite Farbpalette ermöglicht die exakte Umsetzung von <strong>Pantone- und HKS-Farben</strong>. So wird Ihr Corporate Design perfekt auf Textilien übertragen.
				</p>
			</TechniqueCard>
			<TechniqueCard title="Optimale Platzierung">
				<svg slot="icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-base-content">
					<path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
					<path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
				</svg>
				<p class="text-neutral/70 text-sm mb-3">
					Die Stickposition ist flexibel: <strong>Herzseite, Rücken, Ärmel, Bund oder Kragen</strong>.
				</p>
				<p class="text-neutral/70 text-sm">
					Bei kleineren Textilien oder Damen-Schnitten passen unsere Experten Motive entsprechend an, damit Proportionen und Platzierung optimal wirken.
				</p>
			</TechniqueCard>
		</div>
	</TechniqueMaterialsSection>

	<!-- Fertige Stickerei -->
	<figure class="my-12 rounded-2xl overflow-hidden shadow-lg border border-base-300/30 max-w-2xl">
		<img
			src="/images/dienstleistungen/stickerei/64285.webp"
			alt="Fertige Stickerei aus unserer Produktion"
			class="w-full aspect-[4/3] object-cover"
			width="600"
			height="450"
			loading="lazy"
		/>
		<figcaption class="p-4 bg-base-200/80 text-sm text-neutral/80">Fertige Stickerei – Qualität aus unserer Werkstatt</figcaption>
	</figure>

	<ProsConsSection
		advantages={[
			'Hochwertigste Optik und edelste Veredelungsmethode',
			'Extrem langlebig – auch nach vielen Waschgängen',
			'Stickprogramm wiederverwendbar für Folgeaufträge',
			'Pantone- und HKS-genaue Farbabstimmung möglich',
			'Flexible Platzierung auf verschiedenen Textilbereichen',
			'Professionell und repräsentativ für Firmen und Vereine',
		]}
		disadvantages={[
			'Höhere Kosten pro Stück als bei Druckverfahren',
			'Nicht alle Motive umsetzbar (sehr kleine Details, komplexe Verläufe)',
			'Mindest-Schrifthöhe von 5 mm erforderlich',
			'Einmalige Programmierkosten beim ersten Auftrag',
			'Längere Produktionszeit als bei einfachen Druckverfahren',
		]}
	/>

	<div class="divider my-12"></div>

	<UseCasesSection
		title="Einsatzgebiete für Direkteinstickung"
		introText="Die edelste Veredelungsmethode für anspruchsvolle Projekte"
		columns="3"
		items={[
			{
				iconPath: "M20.25 14.15v4.25c0 1.094-.787 2.036-1.872 2.18-2.087.277-4.216.42-6.378.42s-4.291-.143-6.378-.42c-1.085-.144-1.872-1.086-1.872-2.18v-4.25m16.5 0a2.18 2.18 0 00.75-1.661V8.706c0-1.081-.768-2.015-1.837-2.175a48.114 48.114 0 00-3.413-.387m4.5 8.006c-.194.165-.42.295-.673.38A23.978 23.978 0 0112 15.75c-2.648 0-5.195-.429-7.577-1.22a2.016 2.016 0 01-.673-.38m0 0A2.18 2.18 0 013 12.489V8.706c0-1.081.768-2.015 1.837-2.175a48.111 48.111 0 013.413-.387m7.5 0V5.25A2.25 2.25 0 0013.5 3h-3a2.25 2.25 0 00-2.25 2.25v.894m7.5 0a48.667 48.667 0 00-7.5 0M12 12.75h.008v.008H12v-.008z",
				title: "Firmen & Corporate Fashion",
				description: "Firmenlogos auf Hemden, Blusen, Poloshirts, Jacken – professionell und repräsentativ"
