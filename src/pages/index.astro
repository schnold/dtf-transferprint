	<!-- Video Lazy Loading Script -->
	<script is:inline>
		// Wait for page to fully load before initializing video
		if (document.readyState === 'complete') {
			initVideoLazyLoad();
		} else {
			window.addEventListener('load', initVideoLazyLoad);
		}

		function initVideoLazyLoad() {
			const video = document.getElementById('hero-video');
			if (!video || video.tagName !== 'VIDEO') return;

			// Use Intersection Observer to load video when it's about to enter viewport
			const observer = new IntersectionObserver((entries) => {
				entries.forEach(entry => {
					if (entry.isIntersecting) {
						// Load and play video when it enters viewport
						const videoElement = entry.target;
						if (videoElement.tagName === 'VIDEO') {
							videoElement.load();
							videoElement.play().catch(() => {
								// Autoplay was prevented, video will play on user interaction
							});
							observer.unobserve(videoElement);
						}
					}
				});
			}, {
				rootMargin: '50px' // Start loading 50px before video enters viewport
			});

			observer.observe(video);
		}
	</script>

