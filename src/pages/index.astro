	<script>
		(function () {
			const HERO_INTERVAL_MS = 10_000;
			const layers = document.querySelectorAll('.hero-bg-layer');
			const dots = document.querySelectorAll('.hero-dot');
			if (layers.length === 0) return;
			let current = 0;
			let loadedImages = new Set<number>();
			let interval: number | undefined;

			// Mark first image as loaded
			loadedImages.add(0);

			// Determine which image size to load based on viewport width
			function getResponsiveSource(layer: HTMLImageElement): string | null {
				const width = window.innerWidth;
				if (width <= 640) {
					return layer.getAttribute('data-bg-src-mobile');
				} else if (width <= 1024) {
					return layer.getAttribute('data-bg-src-tablet');
				} else {
					return layer.getAttribute('data-bg-src-desktop');
				}
			}

			// Lazy load images as they're needed with priority hints
			function loadImage(index: number, priority: boolean = false) {
				if (loadedImages.has(index)) return;
				const layer = layers[index] as HTMLImageElement;
				const bgSrc = getResponsiveSource(layer);

				if (bgSrc) {
					// Use fetchpriority if this is a high priority image
					if (priority && 'fetchPriority' in layer) {
						layer.fetchPriority = 'high';
					}

					// Set up responsive srcset
					const mobileSrc = layer.getAttribute('data-bg-src-mobile');
					const tabletSrc = layer.getAttribute('data-bg-src-tablet');
					const desktopSrc = layer.getAttribute('data-bg-src-desktop');

					if (mobileSrc && tabletSrc && desktopSrc) {
						layer.srcset = `${mobileSrc} 640w, ${tabletSrc} 1024w, ${desktopSrc} 1920w`;
						layer.sizes = '100vw';
					}

					layer.src = bgSrc;
					loadedImages.add(index);
				}
			}

			function goTo(index: number) {
				current = index;
				// Load current image with high priority
				loadImage(current, true);
				// Preload next image in background
				const nextIndex = (current + 1) % layers.length;
				const callback = () => loadImage(nextIndex);
				if ('requestIdleCallback' in window) {
					requestIdleCallback(callback);
				} else {
					setTimeout(callback, 100);
				}

				layers.forEach((el, i) => {
					(el as HTMLElement).style.opacity = i === current ? '1' : '0';
				});
				dots.forEach((el, i) => {
					el.setAttribute('aria-selected', i === current ? 'true' : 'false');
				});
			}

			function showNext() {
				if (layers.length <= 1) return;
				goTo((current + 1) % layers.length);
			}

			function startCarousel() {
				interval = setInterval(showNext, HERO_INTERVAL_MS);
			}

			function stopCarousel() {
				if (interval) clearInterval(interval);
			}

			// User interaction handlers
			dots.forEach((dot, i) => {
				dot.addEventListener('click', () => {
					stopCarousel();
					goTo(i);
					startCarousel();
				});
			});

			// Pause carousel when page is hidden
			document.addEventListener('visibilitychange', () => {
				if (document.hidden) {
					stopCarousel();
				} else {
					startCarousel();
				}
			});

			// Start carousel
			startCarousel();

			// Preload next image after page load completes
			const preloadNext = () => loadImage(1);
			if ('requestIdleCallback' in window) {
				requestIdleCallback(preloadNext, { timeout: 2000 });
			} else {
				setTimeout(preloadNext, 2000);
			}
		})();
	</script>

