const HERO_IMAGE_DIR = join(process.cwd(), 'public', 'images', 'landing-page', 'hero');
const HERO_WEBP_EXT = /\.webp$/i;
const HERO_JPG_EXT = /\.jpe?g$/i;

type HeroImage = { desktop: string; mobile: string; tablet: string };

// Get base hero images (webp with responsive variants + plain jpgs)
const heroImages: HeroImage[] = (() => {
	try {
		const files = readdirSync(HERO_IMAGE_DIR);

		const webpImages: HeroImage[] = files
			.filter((f) => HERO_WEBP_EXT.test(f))
			.filter((f) => !f.includes('-mobile') && !f.includes('-tablet') && !f.includes('-desktop'))
			.sort()
			.map((f) => {
				const base = `/images/landing-page/hero/${f.replace('.webp', '')}`;
				return { desktop: `${base}-desktop.webp`, mobile: `${base}-mobile.webp`, tablet: `${base}-tablet.webp` };
			});

		const jpgImages: HeroImage[] = files
			.filter((f) => HERO_JPG_EXT.test(f))
			.sort()
			.map((f) => {
				const src = `/images/landing-page/hero/${f}`;
				return { desktop: src, mobile: src, tablet: src };
			});

		return [...webpImages, ...jpgImages];
	} catch {
		return [];
	}
})();
