---
import "../assets/app.css";

interface Props {
	title?: string;
	description?: string;
}

const { title = "DTF Transfer Print - Professional Print Solutions", description = "High-quality DTF transfers, custom printing, and fast turnaround times. Your vision, our expertise." } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="custom">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
