---
import Layout from './Layout.astro';
import {
  LayoutDashboard,
  Package,
  Inbox,
  Users,
  Box,
  FolderTree,
  Truck,
  FileText,
  Settings,
  User
} from '@lucide/astro';

interface Props {
  title: string;
  currentPage?: string;
}

const { title, currentPage = 'dashboard' } = Astro.props;
const user = Astro.locals.user;

// Lucide icon components per tab
const navIcons: Record<string, typeof LayoutDashboard> = {
  dashboard: LayoutDashboard,
  orders: Package,
  anfragen: Inbox,
  users: Users,
  products: Box,
  categories: FolderTree,
  shipping: Truck,
  'email-templates': FileText,
  settings: Settings
};

// Navigation items
const navItems = [
  { name: 'Dashboard', href: '/admin', id: 'dashboard' },
  { name: 'Bestellungen', href: '/admin/orders', id: 'orders' },
  { name: 'Anfragen', href: '/admin/anfragen', id: 'anfragen' },
  { name: 'Benutzer', href: '/admin/users', id: 'users' },
  { name: 'Produkte', href: '/admin/products', id: 'products' },
  { name: 'Kategorien', href: '/admin/categories', id: 'categories' },
  { name: 'Versand', href: '/admin/shipping', id: 'shipping' },
  { name: 'E-Mail-Vorlagen', href: '/admin/email-templates', id: 'email-templates' },
  { name: 'Einstellungen', href: '/admin/settings', id: 'settings' }
];
---

<Layout title={title}>
  <div class="min-h-screen bg-base-200 bg-gradient-to-br from-base-200 via-base-100 to-base-200">
    <!-- Admin Header -->
    <div class="bg-base-100 border-b border-base-300 sticky top-0 z-40">
      <div class="max-w-7xl lg:max-w-7xl-extended mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center gap-4">
            <a href="/" class="text-sm text-base-content/60 hover:text-base-content transition-colors">
              ← Zurück zur Website
            </a>
            <div class="h-6 w-px bg-base-300"></div>
            <h1 class="text-xl font-bold text-base-content">Admin Panel</h1>
          </div>
          <div class="flex items-center gap-3">
            <div class="text-sm text-right">
              <p class="font-medium text-base-content">{user?.name}</p>
              <p class="text-xs text-base-content/60">Administrator</p>
            </div>
            <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center">
              <User class="w-6 h-6" stroke-width={1.5} />
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Admin Navigation -->
    <div class="bg-base-100 border-b border-base-300">
      <div class="max-w-7xl lg:max-w-7xl-extended mx-auto px-4 sm:px-6 lg:px-8">
        <nav class="flex gap-1">
          {navItems.map((item) => {
            const IconComponent = navIcons[item.id];
            return (
              <a
                href={item.href}
                class:list={[
                  "flex items-center gap-2 px-4 py-3 text-sm font-medium transition-colors border-b-2",
                  currentPage === item.id
                    ? "admin-tab-active"
                    : "text-base-content/70 hover:text-base-content border-transparent hover:border-base-300"
                ]}
              >
                {IconComponent && <IconComponent class="w-5 h-5 shrink-0" stroke-width={1.5} />}
                {item.name}
              </a>
            );
          })}
        </nav>
      </div>
    </div>

    <!-- Admin Content -->
    <div class="max-w-7xl lg:max-w-7xl-extended mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <slot />
    </div>
  </div>
</Layout>
