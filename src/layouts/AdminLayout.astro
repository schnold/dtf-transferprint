---
import Layout from './Layout.astro';

interface Props {
  title: string;
  currentPage?: string;
}

const { title, currentPage = 'dashboard' } = Astro.props;
const user = Astro.locals.user;

// Navigation items
const navItems = [
  {
    name: 'Dashboard',
    href: '/admin',
    icon: 'M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z',
    id: 'dashboard'
  },
  {
    name: 'Benutzer',
    href: '/admin/users',
    icon: 'M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z',
    id: 'users'
  },
  {
    name: 'Produkte',
    href: '/admin/products',
    icon: 'M4 4h16v2H4V4zm0 5h16v2H4V9zm0 5h16v2H4v-2zm0 5h16v2H4v-2z',
    id: 'products'
  },
  {
    name: 'Kategorien',
    href: '/admin/categories',
    icon: 'M3 4h18v2H3V4zm0 7h12v2H3v-2zm0 7h18v2H3v-2z',
    id: 'categories'
  },
  {
    name: 'Versand',
    href: '/admin/shipping',
    icon: 'M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4',
    id: 'shipping'
  },
  {
    name: 'Einstellungen',
    href: '/admin/settings',
    icon: 'M19.14 12.94c.04-.3.06-.61.06-.94 0-.32-.02-.64-.07-.94l2.03-1.58c.18-.14.23-.41.12-.61l-1.92-3.32c-.12-.22-.37-.29-.59-.22l-2.39.96c-.5-.38-1.03-.7-1.62-.94L14.4 2.81c-.04-.24-.24-.41-.48-.41h-3.84c-.24 0-.43.17-.47.41l-.36 2.54c-.59.24-1.13.57-1.62.94l-2.39-.96c-.22-.08-.47 0-.59.22L2.74 8.87c-.12.21-.08.47.12.61l2.03 1.58c-.05.3-.09.63-.09.94s.02.64.07.94l-2.03 1.58c-.18.14-.23.41-.12.61l1.92 3.32c.12.22.37.29.59.22l2.39-.96c.5.38 1.03.7 1.62.94l.36 2.54c.05.24.24.41.48.41h3.84c.24 0 .44-.17.47-.41l.36-2.54c.59-.24 1.13-.56 1.62-.94l2.39.96c.22.08.47 0 .59-.22l1.92-3.32c.12-.22.07-.47-.12-.61l-2.01-1.58zM12 15.6c-1.98 0-3.6-1.62-3.6-3.6s1.62-3.6 3.6-3.6 3.6 1.62 3.6 3.6-1.62 3.6-3.6 3.6z',
    id: 'settings'
  }
];
---

<Layout title={title}>
  <div class="min-h-screen bg-base-200 bg-gradient-to-br from-base-200 via-base-100 to-base-200">
    <!-- Admin Header -->
    <div class="bg-base-100 border-b border-base-300 sticky top-0 z-40">
      <div class="max-w-7xl lg:max-w-7xl-extended mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center gap-4">
            <a href="/" class="text-sm text-base-content/60 hover:text-base-content transition-colors">
              ← Zurück zur Website
            </a>
            <div class="h-6 w-px bg-base-300"></div>
            <h1 class="text-xl font-bold text-base-content">Admin Panel</h1>
          </div>
          <div class="flex items-center gap-3">
            <div class="text-sm text-right">
              <p class="font-medium text-base-content">{user?.name}</p>
              <p class="text-xs text-base-content/60">Administrator</p>
            </div>
            <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-primary">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Admin Navigation -->
    <div class="bg-base-100 border-b border-base-300">
      <div class="max-w-7xl lg:max-w-7xl-extended mx-auto px-4 sm:px-6 lg:px-8">
        <nav class="flex gap-1">
          {navItems.map((item) => (
            <a
              href={item.href}
              class:list={[
                "flex items-center gap-2 px-4 py-3 text-sm font-medium transition-colors border-b-2",
                currentPage === item.id
                  ? "text-primary border-primary"
                  : "text-base-content/70 hover:text-base-content border-transparent hover:border-base-300"
              ]}
            >
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
                <path d={item.icon} />
              </svg>
              {item.name}
            </a>
          ))}
        </nav>
      </div>
    </div>

    <!-- Admin Content -->
    <div class="max-w-7xl lg:max-w-7xl-extended mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <slot />
    </div>
  </div>
</Layout>
